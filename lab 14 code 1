    <footer>
        Власний HTML елемент WeekBox &copy; 2023
    </footer>

    <script>
        class WeekBox extends HTMLElement {
            constructor() {
                super();
                this.attachShadow({ mode: 'open' });
                this._days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
                this._selectedDay = '';
            }
            
            connectedCallback() {
                this.render();
                this.setupEventListeners();
                
                if (this.hasAttribute('wday')) {
                    const initialDay = this.getAttribute('wday');
                    if (this._days.includes(initialDay)) {
                        this.shadowRoot.querySelector('select').value = initialDay;
                        this._selectedDay = initialDay;
                    }
                }
            }
            
            static get observedAttributes() {
                return ['wday', 'disabled', 'placeholder'];
            }
            
            attributeChangedCallback(name, oldValue, newValue) {
                if (name === 'wday' && oldValue !== newValue) {
                    const select = this.shadowRoot.querySelector('select');
                    if (select && this._days.includes(newValue)) {
                        select.value = newValue;
                        this._selectedDay = newValue;
                    }
                }
                
                if (name === 'disabled' && this.shadowRoot) {
                    const select = this.shadowRoot.querySelector('select');
                    if (select) {
                        select.disabled = newValue !== null;
                    }
                }
                
                if (name === 'placeholder' && this.shadowRoot) {
                    const select = this.shadowRoot.querySelector('select');
                    if (select) {
                        const placeholderOption = select.querySelector('option[value=""]');
                        if (placeholderOption) {
                            placeholderOption.textContent = newValue || 'Select a day';
                        }
                    }
                }
            }
            
            render() {
                const placeholder = this.getAttribute('placeholder') || 'Select a day';
                const isDisabled = this.hasAttribute('disabled');
                
                this.shadowRoot.innerHTML = `
                    <style>
                        select {
                            width: 100%;
                            padding: 12px 16px;
                            font-size: 16px;
                            border: 2px solid #3498db;
                            border-radius: 8px;
                            background-color: white;
                            color: #2c3e50;
                            cursor: pointer;
                            transition: all 0.3s ease;
                            appearance: none;
                            background-image: url('data:image/svg+xml;charset=US-ASCII,<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="%233498db" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>');
                            background-repeat: no-repeat;
                            background-position: right 16px center;
                            background-size: 16px;
                            padding-right: 45px;
                        }
                        
                        select:focus {
                            outline: none;
                            border-color: #e74c3c;
                            box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.2);
                        }
                        
                        select:disabled {
                            background-color: #ecf0f1;
                            border-color: #bdc3c7;
                            color: #7f8c8d;
                            cursor: not-allowed;
                        }
                        
                        .weekbox-label {
                            display: block;
                            margin-bottom: 8px;
                            font-weight: bold;
                            color: #2c3e50;
                        }
                    </style>
                    
                    <div>
                        <select ${isDisabled ? 'disabled' : ''}>
                            <option value="">${placeholder}</option>
                            ${this._days.map(day => `<option value="${day}">${day}</option>`).join('')}
                        </select>
                    </div>
                `;
            }
            
            setupEventListeners() {
                const select = this.shadowRoot.querySelector('select');
                
                select.addEventListener('change', (event) => {
                    this._selectedDay = event.target.value;
                    
                    if (this._selectedDay) {
                        this.setAttribute('wday', this._selectedDay);
                    } else {
                        this.removeAttribute('wday');
                    }
                    
                    const customEvent = new CustomEvent('weekday-change', {
                        bubbles: true,
                        composed: true,
                        detail: {
                            day: this._selectedDay
                        }
                    });
                    
                    this.dispatchEvent(customEvent);
                });
            }
            
            get wDay() {
                return this._selectedDay;
            }
            
            set wDay(day) {
                if (this._days.includes(day)) {
                    this._selectedDay = day;
                    this.setAttribute('wday', day);
                    
                    const select = this.shadowRoot.querySelector('select');
                    if (select) {
                        select.value = day;
                    }
                }
            }
            
            reset() {
                this._selectedDay = '';
                this.removeAttribute('wday');
                const select = this.shadowRoot.querySelector('select');
                if (select) {
                    select.value = '';
                }
            }
        }
        
        customElements.define('week-box', WeekBox);
        
        document.addEventListener('DOMContentLoaded', () => {
            const mainWeekBox = document.getElementById('myWeekBox');
            const dayDisplay = document.getElementById('selectedDayDisplay');
            
            mainWeekBox.addEventListener('weekday-change', (event) => {
                const selectedDay = event.detail.day;
                
                if (selectedDay) {
                    dayDisplay.textContent = selectedDay;
                    dayDisplay.style.color = '#27ae60';
                } else {
                    dayDisplay.textContent = 'День ще не обрано';
                    dayDisplay.style.color = '#e74c3c';
                }
            });
            
            const weekBox1 = document.getElementById('weekBox1');
            const weekBox2 = document.getElementById('weekBox2');
            const weekBox3 = document.getElementById('weekBox3');
            
            const value1 = document.getElementById('value1');
            const value2 = document.getElementById('value2');
            const value3 = document.getElementById('value3');
            
            weekBox1.addEventListener('weekday-change', (event) => {
                value1.textContent = event.detail.day || 'не обрано';
            });
            
            weekBox2.addEventListener('weekday-change', (event) => {
                value2.textContent = event.detail.day || 'не обрано';
            });
            
            weekBox3.addEventListener('weekday-change', (event) => {
                value3.textContent = event.detail.day || 'не активний';
            });
            
            setTimeout(() => {
                weekBox1.wDay = 'Sunday';
            }, 2000);
        });
    </script>
</body>
</html>
