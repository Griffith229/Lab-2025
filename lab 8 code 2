    <script>
        let array = [];
        const size = 3;
        let average = 0;
        
        function getRandomFloat(min, max, decimals = 2) {
            const value = Math.random() * (max - min) + min;
            return parseFloat(value.toFixed(decimals));
        }
        
        function generateArray() {
            array = [];
            
            for (let i = 0; i < size; i++) {
                array[i] = [];
                for (let j = 0; j < size; j++) {
                    array[i][j] = getRandomFloat(-10, 10);
                }
            }
            
            return array;
        }
        
        function displayArray() {
            const container = document.getElementById('matrixContainer');
            
            let sum = 0;
            let min = array[0][0];
            let max = array[0][0];
            let totalElements = size * size;
            
            for (let i = 0; i < size; i++) {
                for (let j = 0; j < size; j++) {
                    sum += array[i][j];
                    if (array[i][j] < min) min = array[i][j];
                    if (array[i][j] > max) max = array[i][j];
                }
            }
            
            average = sum / totalElements;
            
            document.getElementById('averageValue').textContent = average.toFixed(2);
            document.getElementById('minValue').textContent = min.toFixed(2);
            document.getElementById('maxValue').textContent = max.toFixed(2);
            
            let html = '<table class="matrix">';
            
            html += '<tr><td></td>';
            for (let j = 0; j < size; j++) {
                const isCenter = j === 1;
                html += `<td style="background-color:#f8f9fa; color:#6c757d; font-size:16px;" ${isCenter ? 'class="center-column"' : ''}>
                    –°—Ç–æ–≤–ø–µ—Ü—å ${j} ${isCenter ? '‚Üï' : ''}
                </td>`;
            }
            html += '</tr>';
            
            for (let i = 0; i < size; i++) {
                html += `<tr><td style="background-color:#f8f9fa; color:#6c757d; font-size:16px;">–†—è–¥–æ–∫ ${i}</td>`;
                for (let j = 0; j < size; j++) {
                    const value = array[i][j];
                    const isCenterColumn = j === 1;
                    const isGreater = value > average;
                    const isLess = value < average;
                    
                    let className = '';
                    if (isCenterColumn) {
                        className = 'center-column';
                    }
                    
                    html += `<td class="${className}" style="
                        background-color: ${isGreater ? '#d4edda' : isLess ? '#f8d7da' : '#fff3cd'};
                        color: ${isGreater ? '#155724' : isLess ? '#721c24' : '#856404'};
                        ${isCenterColumn ? 'border-width: 3px; border-color: #9b59b6;' : ''}
                    ">${value}</td>`;
                }
                html += '</tr>';
            }
            
            html += '</table>';
            container.innerHTML = html;
            
            return { average, min, max };
        }
        
        function processArray() {
            document.getElementById('resultSection').style.display = 'block';
            
            document.getElementById('avgValue1').textContent = average.toFixed(2);
            document.getElementById('avgValue2').textContent = average.toFixed(2);
            
            const greaterThanAvg = [];
            const lessThanAvg = [];
            
            for (let i = 0; i < size; i++) {
                for (let j = 0; j < size; j++) {
                    const value = array[i][j];
                    if (value > average) {
                        greaterThanAvg.push(value);
                    } else if (value < average) {
                        lessThanAvg.push(value);
                    }
                }
            }
            
            const greaterContainer = document.getElementById('greaterArray');
            let greaterHtml = '';
            
            if (greaterThanAvg.length === 0) {
                greaterHtml = '<div style="color: #7f8c8d; font-style: italic;">–ù–µ–º–∞—î –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ –±—ñ–ª—å—à–∏—Ö –∑–∞ —Å–µ—Ä–µ–¥–Ω—î</div>';
            } else {
                greaterThanAvg.forEach(value => {
                    greaterHtml += `<div class="array-element greater-than-avg">${value}</div>`;
                });
            }
            greaterContainer.innerHTML = greaterHtml;
            document.getElementById('countGreater').textContent = greaterThanAvg.length;
            
            const lessContainer = document.getElementById('lessArray');
            let lessHtml = '';
            
            if (lessThanAvg.length === 0) {
                lessHtml = '<div style="color: #7f8c8d; font-style: italic;">–ù–µ–º–∞—î –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ –º–µ–Ω—à–∏—Ö –∑–∞ —Å–µ—Ä–µ–¥–Ω—î</div>';
            } else {
                lessThanAvg.forEach(value => {
                    lessHtml += `<div class="array-element less-than-avg">${value}</div>`;
                });
            }
            lessContainer.innerHTML = lessHtml;
            document.getElementById('countLess').textContent = lessThanAvg.length;
            
            const centerColumn = [];
            const centerColumnSquared = [];
            let sumOfSquares = 0;
            
            for (let i = 0; i < size; i++) {
                const value = array[i][1]; 
                centerColumn.push(value);
                const squared = value * value;
                centerColumnSquared.push(squared);
                sumOfSquares += squared;
            }
            
            const centerOriginalContainer = document.getElementById('centerColumnOriginal');
            let centerOriginalHtml = '';
            
            centerColumn.forEach(value => {
                centerOriginalHtml += `<div class="array-element center-value">${value}</div>`;
            });
            centerOriginalContainer.innerHTML = centerOriginalHtml;
            
            const centerSquaredContainer = document.getElementById('centerColumnSquared');
            let centerSquaredHtml = '';
            
            centerColumnSquared.forEach((squared, index) => {
                centerSquaredHtml += `
                    <div class="array-element squared-value">
                        ${squared.toFixed(2)}
                        <span class="original-value">${centerColumn[index]}</span>
                    </div>
                `;
            });
            centerSquaredContainer.innerHTML = centerSquaredHtml;
            
            document.getElementById('sumOfSquares').textContent = sumOfSquares.toFixed(2);
            
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function generateNewArray() {
            generateArray();
            displayArray();
            document.getElementById('resultSection').style.display = 'none';
            
            alert('–ù–æ–≤–∏–π –º–∞—Å–∏–≤ 3x3 –∑–≥–µ–Ω–µ—Ä–æ–≤–∞–Ω–æ! –ù–∞—Ç–∏—Å–Ω—ñ—Ç—å "–û–±—Ä–æ–±–∏—Ç–∏ –º–∞—Å–∏–≤" –¥–ª—è –æ–±—Ä–æ–±–∫–∏.');
        }
        
        function resetAll() {
            array = [];
            average = 0;
            
            document.getElementById('matrixContainer').innerHTML = '';
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('averageValue').textContent = '0.00';
            document.getElementById('minValue').textContent = '0.00';
            document.getElementById('maxValue').textContent = '0.00';
            
            alert('–í—Å—ñ –¥–∞–Ω—ñ —Å–∫–∏–Ω—É—Ç–æ! –ù–∞—Ç–∏—Å–Ω—ñ—Ç—å "–ó–≥–µ–Ω–µ—Ä—É–≤–∞—Ç–∏ –Ω–æ–≤–∏–π –º–∞—Å–∏–≤" –¥–ª—è —Å—Ç–≤–æ—Ä–µ–Ω–Ω—è –º–∞—Å–∏–≤—É.');
        }
        
        window.onload = function() {
            generateArray();
            displayArray();
        };
    </script>
</body>
