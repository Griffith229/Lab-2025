            <div class="arrays-container">
                <div class="array-box">
                    <h3>–û—Ä–∏–≥—ñ–Ω–∞–ª—å–Ω—ñ –∑–Ω–∞—á–µ–Ω–Ω—è —Å–µ—Ä–µ–¥–Ω—å–æ–≥–æ —Å—Ç–æ–≤–ø—Ü—è</h3>
                    <div id="centerColumnOriginal" class="array-display">
                    </div>
                </div>
                
                <div class="array-box">
                    <h3>–ö–≤–∞–¥—Ä–∞—Ç–∏ –∑–Ω–∞—á–µ–Ω—å —Å–µ—Ä–µ–¥–Ω—å–æ–≥–æ —Å—Ç–æ–≤–ø—Ü—è</h3>
                    <div id="centerColumnSquared" class="array-display">
                    </div>
                </div>
            </div>
            
            <div style="text-align: center; margin-top: 20px;">
                <div class="highlight">–°—É–º–∞ –∫–≤–∞–¥—Ä–∞—Ç—ñ–≤: <span id="sumOfSquares">0.00</span></div>
            </div>
