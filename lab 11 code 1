    <script>
        function displayCurrentDate() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            const dateString = now.toLocaleDateString('uk-UA', options);
            document.getElementById('currentDate').textContent = dateString;
        }
        
        function isValidDate(day, month, year) {
            if (year < 1900 || year > 2100) return false;
            if (month < 1 || month > 12) return false;
            if (day < 1 || day > 31) return false;
            
            if ([4, 6, 9, 11].includes(month) && day > 30) return false;
            
            if (month === 2) {
                const isLeapYear = (year % 4 === 0 && year % 100 !== 0) || (year % 400 === 0);
                if (isLeapYear && day > 29) return false;
                if (!isLeapYear && day > 28) return false;
            }
            
            return true;
        }
        
        function getDateFromForm(formNumber) {
            const day = parseInt(document.getElementById(`day${formNumber}`).value);
            const month = parseInt(document.getElementById(`month${formNumber}`).value);
            const year = parseInt(document.getElementById(`year${formNumber}`).value);
            
            return { day, month, year };
        }
        
        function createDateObject(day, month, year) {
            return new Date(year, month - 1, day);
        }
        
        function formatDate(date, format = 'dd.mm.yyyy') {
            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();
            
            if (format === 'dd.mm.yyyy') {
                return `${day}.${month}.${year}`;
            }
            
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            return date.toLocaleDateString('uk-UA', options);
        }
        
        function calculateDifference() {
            const date1 = getDateFromForm(1);
            const date2 = getDateFromForm(2);
            
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.style.display = 'none';
            
            if (!isValidDate(date1.day, date1.month, date1.year)) {
                errorMessage.textContent = `–ü–æ—á–∞—Ç–∫–æ–≤–∞ –¥–∞—Ç–∞ ${date1.day}.${date1.month}.${date1.year} –Ω–µ–∫–æ—Ä–µ–∫—Ç–Ω–∞!`;
                errorMessage.style.display = 'block';
                return;
            }
            
            if (!isValidDate(date2.day, date2.month, date2.year)) {
                errorMessage.textContent = `–ö—ñ–Ω—Ü–µ–≤–∞ –¥–∞—Ç–∞ ${date2.day}.${date2.month}.${date2.year} –Ω–µ–∫–æ—Ä–µ–∫—Ç–Ω–∞!`;
                errorMessage.style.display = 'block';
                return;
            }
            
            const dateObj1 = createDateObject(date1.day, date1.month, date1.year);
            const dateObj2 = createDateObject(date2.day, date2.month, date2.year);
            
            if (dateObj1 > dateObj2) {
                errorMessage.textContent = '–ü–æ—á–∞—Ç–∫–æ–≤–∞ –¥–∞—Ç–∞ –ø–æ–≤–∏–Ω–Ω–∞ –±—É—Ç–∏ —Ä–∞–Ω—ñ—à–µ –∫—ñ–Ω—Ü–µ–≤–æ—ó –¥–∞—Ç–∏!';
                errorMessage.style.display = 'block';
                return;
            }
            
            document.getElementById('date1Display').textContent = formatDate(dateObj1, 'full');
            document.getElementById('date2Display').textContent = formatDate(dateObj2, 'full');
            
            const timeDiff = dateObj2.getTime() - dateObj1.getTime();
            
            const totalSeconds = Math.floor(timeDiff / 1000);
            const totalMinutes = Math.floor(totalSeconds / 60);
            const totalHours = Math.floor(totalMinutes / 60);
            const totalDays = Math.floor(totalHours / 24);
            const totalWeeks = Math.floor(totalDays / 7);
            
            let years = dateObj2.getFullYear() - dateObj1.getFullYear();
            let months = dateObj2.getMonth() - dateObj1.getMonth();
            let days = dateObj2.getDate() - dateObj1.getDate();
            
            if (days < 0) {
                months--;
                const prevMonth = new Date(dateObj2.getFullYear(), dateObj2.getMonth(), 0);
                days += prevMonth.getDate();
            }
            
            if (months < 0) {
                years--;
                months += 12;
            }
            
            document.getElementById('totalDays').textContent = totalDays.toLocaleString();
            document.getElementById('years').textContent = years;
            document.getElementById('months').textContent = months;
            document.getElementById('days').textContent = days;
            document.getElementById('weeks').textContent = totalWeeks;
            document.getElementById('hours').textContent = totalHours.toLocaleString();
            document.getElementById('minutes').textContent = totalMinutes.toLocaleString();
            document.getElementById('seconds').textContent = totalSeconds.toLocaleString();
            
            const comparisonText = document.getElementById('comparisonText');
            if (years > 0) {
                comparisonText.innerHTML = `–ú—ñ–∂ —Ü–∏–º–∏ –¥–∞—Ç–∞–º–∏ –ø—Ä–æ–π—à–ª–æ <span class="highlight">${years}</span> —Ä–æ–∫—ñ–≤, <span class="highlight">${months}</span> –º—ñ—Å—è—Ü—ñ–≤ —Ç–∞ <span class="highlight">${days}</span> –¥–Ω—ñ–≤`;
            } else if (months > 0) {
                comparisonText.innerHTML = `–ú—ñ–∂ —Ü–∏–º–∏ –¥–∞—Ç–∞–º–∏ –ø—Ä–æ–π—à–ª–æ <span class="highlight">${months}</span> –º—ñ—Å—è—Ü—ñ–≤ —Ç–∞ <span class="highlight">${days}</span> –¥–Ω—ñ–≤`;
            } else {
                comparisonText.innerHTML = `–ú—ñ–∂ —Ü–∏–º–∏ –¥–∞—Ç–∞–º–∏ –ø—Ä–æ–π—à–ª–æ <span class="highlight">${totalDays}</span> –¥–Ω—ñ–≤`;
            }
            
            const additionalInfo = document.getElementById('additionalInfo');
            let infoHtml = '';
            
            const isLeapYear1 = (date1.year % 4 === 0 && date1.year % 100 !== 0) || (date1.year % 400 === 0);
            const isLeapYear2 = (date2.year % 4 === 0 && date2.year % 100 !== 0) || (date2.year % 400 === 0);
            
            if (isLeapYear1 || isLeapYear2) {
                infoHtml += `<p>üìÖ –¶–µ–π –ø–µ—Ä—ñ–æ–¥ –≤–∫–ª—é—á–∞—î –≤–∏—Å–æ–∫–æ—Å–Ω—ñ —Ä–æ–∫–∏</p>`;
            }
            
            const workDays = Math.floor(totalDays * 5 / 7); 
            infoHtml += `<p>üíº –ü—Ä–∏–±–ª–∏–∑–Ω–æ ${workDays.toLocaleString()} —Ä–æ–±–æ—á–∏—Ö –¥–Ω—ñ–≤</p>`;
            
            const seasons = ['–∑–∏–º–∞', '–≤–µ—Å–Ω–∞', '–ª—ñ—Ç–æ', '–æ—Å—ñ–Ω—å'];
            const season1 = seasons[Math.floor((date1.month % 12) / 3)];
            const season2 = seasons[Math.floor((date2.month % 12) / 3)];
            infoHtml += `<p>üå∑ –ü–æ—á–∞—Ç–æ–∫: ${season1}, –ö—ñ–Ω–µ—Ü—å: ${season2}</p>`;
            
            additionalInfo.innerHTML = infoHtml;
            
            document.getElementById('resultSection').style.display = 'block';
            
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function swapDates() {
            const date1 = getDateFromForm(1);
            const date2 = getDateFromForm(2);
            
            document.getElementById('day1').value = date2.day;
            document.getElementById('month1').value = date2.month;
            document.getElementById('year1').value = date2.year;
            
            document.getElementById('day2').value = date1.day;
            document.getElementById('month2').value = date1.month;
            document.getElementById('year2').value = date1.year;
            
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
        }
        
        function resetDates() {
            document.getElementById('day1').value = '15';
            document.getElementById('month1').value = '1';
            document.getElementById('year1').value = '2020';
            
            document.getElementById('day2').value = '15';
            document.getElementById('month2').value = '12';
            document.getElementById('year2').value = '2023';
            
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
            
            alert('–î–∞—Ç–∏ —Å–∫–∏–Ω—É—Ç–æ –¥–æ –ø–æ—á–∞—Ç–∫–æ–≤–∏—Ö –∑–Ω–∞—á–µ–Ω—å!');
        }
        
        function setPresetDates(preset) {
            const today = new Date();
            
            switch(preset) {
                case 'new_year':
                    document.getElementById('day1').value = '1';
                    document.getElementById('month1').value = '1';
                    document.getElementById('year1').value = today.getFullYear();
                    
                    document.getElementById('day2').value = '1';
                    document.getElementById('month2').value = '1';
                    document.getElementById('year2').value = today.getFullYear() + 1;
                    break;
                    
                case 'birthday':
                    document.getElementById('day1').value = '15';
                    document.getElementById('month1').value = '5';
                    document.getElementById('year1').value = '1990';
                    
                    document.getElementById('day2').value = today.getDate();
                    document.getElementById('month2').value = today.getMonth() + 1;
                    document.getElementById('year2').value = today.getFullYear();
                    break;
                    
                case 'summer_vacation':
                    document.getElementById('day1').value = '1';
                    document.getElementById('month1').value = '6';
                    document.getElementById('year1').value = today.getFullYear();
                    
                    document.getElementById('day2').value = '31';
                    document.getElementById('month2').value = '8';
                    document.getElementById('year2').value = today.getFullYear();
                    break;
                    
                case 'christmas':
                    document.getElementById('day1').value = today.getDate();
                    document.getElementById('month1').value = today.getMonth() + 1;
                    document.getElementById('year1').value = today.getFullYear();
                    
                    document.getElementById('day2').value = '25';
                    document.getElementById('month2').value = '12';
                    document.getElementById('year2').value = today.getFullYear();
                    break;
                    
                case 'today':
                    document.getElementById('day1').value = today.getDate();
                    document.getElementById('month1').value = today.getMonth() + 1;
                    document.getElementById('year1').value = today.getFullYear();
                    
                    document.getElementById('day2').value = '31';
                    document.getElementById('month2').value = '12';
                    document.getElementById('year2').value = today.getFullYear();
                    break;
            }
            
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
        }
        
        window.onload = function() {
            displayCurrentDate();
            
            const inputs = document.querySelectorAll('input[type="number"]');
            inputs.forEach(input => {
                input.addEventListener('change', function() {
                    document.getElementById('resultSection').style.display = 'none';
                    document.getElementById('errorMessage').style.display = 'none';
                });
            });
            
            const selects = document.querySelectorAll('select');
            selects.forEach(select => {
                select.addEventListener('change', function() {
                    document.getElementById('resultSection').style.display = 'none';
                    document.getElementById('errorMessage').style.display = 'none';
                });
            });
        };
    </script>
