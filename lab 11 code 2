    <script>
        let originalArray = [];
        const arraySize = 8;
        
        function generateRandomFloat(min, max, decimals = 2) {
            const value = Math.random() * (max - min) + min;
            return parseFloat(value.toFixed(decimals));
        }
        
        function generateArray() {
            originalArray = [];
            
            for (let i = 0; i < arraySize; i++) {
                const value = generateRandomFloat(0.1, 10.0);
                originalArray.push(value);
            }
            
            return originalArray;
        }
        
        function displayOriginalArray() {
            const container = document.getElementById('originalArray');
            let html = '';
            
            originalArray.forEach((value, index) => {
                html += `
                    <div class="array-element original-element">
                        <span class="index-display">[${index}]</span>
                        ${value}
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }
        
        function getUniqueElements(array) {
            const uniqueArray = [];
            const seen = new Set();
            
            array.forEach(value => {
                if (!seen.has(value)) {
                    seen.add(value);
                    uniqueArray.push(value);
                }
            });
            
            return uniqueArray;
        }
        
        function getElementDifferences(original, unique) {
            const differences = [];
            
            original.forEach((value, index) => {
                const isUnique = unique.includes(value) && unique.indexOf(value) === unique.lastIndexOf(value);
                differences.push({
                    value: value,
                    index: index,
                    isUnique: isUnique,
                    firstOccurrence: original.indexOf(value) === index
                });
            });
            
            return differences;
        }
        
        function processArray() {
            const uniqueArray = getUniqueElements(originalArray);
            const differences = getElementDifferences(originalArray, uniqueArray);
            
            const totalElements = originalArray.length;
            const uniqueCount = uniqueArray.length;
            const duplicateCount = totalElements - uniqueCount;
            const uniquePercentage = ((uniqueCount / totalElements) * 100).toFixed(1);
            
            document.getElementById('uniqueElements').textContent = uniqueCount;
            document.getElementById('duplicateElements').textContent = duplicateCount;
            document.getElementById('uniquePercentage').textContent = `${uniquePercentage}%`;
            
            let originalHtml = '';
            originalArray.forEach((value, index) => {
                const diff = differences.find(d => d.index === index);
                const className = diff.isUnique ? 'same-element' : 'different-element';
                
                originalHtml += `
                    <div class="array-element ${className}">
                        <span class="index-display">[${index}]</span>
                        ${value}
                    </div>
                `;
            });
            document.getElementById('originalDisplay').innerHTML = originalHtml;
            
            let newArrayHtml = '';
            uniqueArray.forEach((value, index) => {
                const originalIndex = originalArray.indexOf(value);
                newArrayHtml += `
                    <div class="array-element original-element">
                        <span class="index-display">[${index}] ‚Üê [${originalIndex}]</span>
                        ${value}
                    </div>
                `;
            });
            document.getElementById('newArrayDisplay').innerHTML = newArrayHtml;
            
            const analysisContainer = document.getElementById('analysisResults');
            let analysisHtml = '';
            
            if (uniqueCount === totalElements) {
                analysisHtml = `<p>üéâ –í—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –º–∞—Å–∏–≤—É —î —É–Ω—ñ–∫–∞–ª—å–Ω–∏–º–∏! –ù–æ–≤–∏–π –º–∞—Å–∏–≤ –±—É–¥–µ —ñ–¥–µ–Ω—Ç–∏—á–Ω–∏–º –≤–∏—Ö—ñ–¥–Ω–æ–º—É.</p>`;
            } else {
                analysisHtml = `<p>–ó–Ω–∞–π–¥–µ–Ω–æ <span class="highlight">${duplicateCount}</span> –¥—É–±–ª—å–æ–≤–∞–Ω–∏—Ö –µ–ª–µ–º–µ–Ω—Ç—ñ–≤.</p>`;
                
                const duplicates = originalArray.filter((value, index) => 
                    originalArray.indexOf(value) !== index
                );
                
                const uniqueDuplicates = [...new Set(duplicates)];
                
                if (uniqueDuplicates.length > 0) {
                    analysisHtml += `<p>–î—É–±–ª—å–æ–≤–∞–Ω—ñ –∑–Ω–∞—á–µ–Ω–Ω—è: `;
                    uniqueDuplicates.forEach((value, index) => {
                        const indices = [];
                        originalArray.forEach((val, idx) => {
                            if (val === value) indices.push(idx);
                        });
                        analysisHtml += `<span class="highlight">${value}</span> (—ñ–Ω–¥–µ–∫—Å–∏: ${indices.join(', ')})`;
                        if (index < uniqueDuplicates.length - 1) analysisHtml += ', ';
                    });
                    analysisHtml += `</p>`;
                }
            }
            
            analysisHtml += `<p>–ù–æ–≤–∏–π –º–∞—Å–∏–≤ –º—ñ—Å—Ç–∏—Ç—å <span class="highlight">${uniqueCount}</span> —É–Ω—ñ–∫–∞–ª—å–Ω–∏—Ö –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ –∑ ${totalElements} –≤–∏—Ö—ñ–¥–Ω–∏—Ö.</p>`;
            
            const minValue = Math.min(...originalArray);
            const maxValue = Math.max(...originalArray);
            const sum = originalArray.reduce((a, b) => a + b, 0);
            const average = sum / totalElements;
            
            analysisHtml += `
                <div style="margin-top: 15px;">
                    <p><strong>–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –≤–∏—Ö—ñ–¥–Ω–æ–≥–æ –º–∞—Å–∏–≤—É:</strong></p>
                    <p>–ú—ñ–Ω—ñ–º–∞–ª—å–Ω–µ –∑–Ω–∞—á–µ–Ω–Ω—è: <span class="highlight">${minValue.toFixed(2)}</span></p>
                    <p>–ú–∞–∫—Å–∏–º–∞–ª—å–Ω–µ –∑–Ω–∞—á–µ–Ω–Ω—è: <span class="highlight">${maxValue.toFixed(2)}</span></p>
                    <p>–°–µ—Ä–µ–¥–Ω—î –∑–Ω–∞—á–µ–Ω–Ω—è: <span class="highlight">${average.toFixed(2)}</span></p>
                    <p>–°—É–º–∞ –≤—Å—ñ—Ö –µ–ª–µ–º–µ–Ω—Ç—ñ–≤: <span class="highlight">${sum.toFixed(2)}</span></p>
                </div>
            `;
            
            analysisContainer.innerHTML = analysisHtml;
            
            document.getElementById('arraySection').style.display = 'block';
            document.getElementById('resultSection').style.display = 'block';
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function generateAndProcess() {
            generateArray();
            displayOriginalArray();
            processArray();
        }
        
        function processExisting() {
            if (originalArray.length === 0) {
                alert('–°–ø–æ—á–∞—Ç–∫—É –∑–≥–µ–Ω–µ—Ä—É–π—Ç–µ –º–∞—Å–∏–≤!');
                return;
            }
            
            processArray();
        }
        
        function resetAll() {
            originalArray = [];
            document.getElementById('arraySection').style.display = 'none';
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('originalArray').innerHTML = '';
            document.getElementById('originalDisplay').innerHTML = '';
            document.getElementById('newArrayDisplay').innerHTML = '';
            document.getElementById('analysisResults').innerHTML = '';
            
            alert('–í—Å—ñ –¥–∞–Ω—ñ —Å–∫–∏–Ω—É—Ç–æ!');
        }
        
        window.onload = function() {
            generateArray();
            displayOriginalArray();
        };
    </script>
</body>
</html>
