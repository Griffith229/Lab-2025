            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: scale(0.8); }
            to { opacity: 1; transform: scale(1); }
        }
        .progress-container {
            margin: 20px 0;
