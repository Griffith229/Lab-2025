<body>
    <div class="container">
        <h1>Асинхронне генерування чисел</h1>
        
        <div class="control-section">
            <h2>Контроль генерації</h2>
            
            <div class="controls">
                <div class="slider-container">
                    <div class="slider-label">
                        <span>Затримка: <span id="delayValue">500</span> мс</span>
                        <span>(0.5 сек)</span>
                    </div>
                    <input type="range" id="delaySlider" min="100" max="2000" value="500" step="100">
                </div>
                
                <div class="slider-container">
                    <div class="slider-label">
                        <span>Кількість чисел: <span id="countValue">100</span></span>
                    </div>
                    <input type="range" id="countSlider" min="10" max="200" value="100" step="10">
                </div>
            </div>
            
            <div class="buttons">
                <button id="startBtn" onclick="startGeneration()">Почати генерацію</button>
                <button id="stopBtn" class="stop" onclick="stopGeneration()" disabled>Зупинити</button>
                <button onclick="clearNumbers()">Очистити</button>
            </div>
            
            <div class="progress-container">
                <div class="progress-bar" id="progressBar">0%</div>
            </div>
            
            <div class="stats">
                <div class="stat-item">
                    <div class="stat-value" id="generatedCount">0</div>
                    <div class="stat-label">Згенеровано</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value" id="currentDelay">500</div>
                    <div class="stat-label">Затримка (мс)</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value" id="evenCount">0</div>
                    <div class="stat-label">Парних чисел</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value" id="oddCount">0</div>
                    <div class="stat-label">Непарних чисел</div>
                </div>
            </div>
        </div>
        
        <div class="numbers-container">
            <h3>Згенеровані числа:</h3>
            <div class="numbers-grid" id="numbersGrid"></div>
        </div>
        
        <div class="console">
            <div class="console-title">Консоль логів:</div>
            <div id="consoleOutput"></div>
        </div>
    </div>

    <script>
        let isGenerating = false;
        let stopGenerationFlag = false;
        let generatedNumbers = [];
        let consoleOutput = '';
        let currentDelay = 500;
        let totalNumbers = 100;
        
        const delaySlider = document.getElementById('delaySlider');
        const countSlider = document.getElementById('countSlider');
        const delayValue = document.getElementById('delayValue');
        const countValue = document.getElementById('countValue');
        const startBtn = document.getElementById('startBtn');
        const stopBtn = document.getElementById('stopBtn');
        
        function logToConsole(message) {
            const timestamp = new Date().toLocaleTimeString();
            const logEntry = `[${timestamp}] ${message}\n`;
            consoleOutput += logEntry;
            document.getElementById('consoleOutput').textContent = consoleOutput;
            document.getElementById('consoleOutput').scrollTop = document.getElementById('consoleOutput').scrollHeight;
            console.log(message);
        }
        
        function updateStats() {
            const evenCount = generatedNumbers.filter(num => num % 2 === 0).length;
            const oddCount = generatedNumbers.length - evenCount;
            
            document.getElementById('generatedCount').textContent = generatedNumbers.length;
            document.getElementById('evenCount').textContent = evenCount;
            document.getElementById('oddCount').textContent = oddCount;
            document.getElementById('currentDelay').textContent = currentDelay;
            
            const progress = (generatedNumbers.length / totalNumbers) * 100;
            const progressBar = document.getElementById('progressBar');
            progressBar.style.width = `${progress}%`;
            progressBar.textContent = `${Math.round(progress)}%`;
        }
        
        function addNumberToGrid(number) {
            const numbersGrid = document.getElementById('numbersGrid');
            const numberBox = document.createElement('div');
            numberBox.className = `number-box ${number % 2 === 0 ? 'even' : 'odd'}`;
            numberBox.textContent = number;
            numbersGrid.appendChild(numberBox);
        }
        
        async function generateRandomNumbersAsync(count, delay) {
            logToConsole(`Початок асинхронної генерації ${count} чисел з затримкою ${delay}мс`);
            
            generatedNumbers = [];
            document.getElementById('numbersGrid').innerHTML = '';
            updateStats();
            
            for (let i = 0; i < count; i++) {
                if (stopGenerationFlag) {
                    logToConsole('Генерацію зупинено користувачем');
                    break;
                }
                
                await new Promise(resolve => setTimeout(resolve, delay));
                
                const randomNumber = Math.floor(Math.random() * 1000) + 1;
                generatedNumbers.push(randomNumber);
                
                addNumberToGrid(randomNumber);
                updateStats();
                
                logToConsole(`Згенеровано число ${i + 1}/${count}: ${randomNumber}`);
            }
            
            if (!stopGenerationFlag) {
                logToConsole(`Генерацію завершено! Усього згенеровано ${generatedNumbers.length} чисел`);
            }
            
            return generatedNumbers;
        }
        
        function startGeneration() {
            if (isGenerating) {
                logToConsole('Генерація вже запущена!');
                return;
            }
            
            stopGenerationFlag = false;
            isGenerating = true;
            startBtn.disabled = true;
            stopBtn.disabled = false;
            
            logToConsole('Основна функція запускає асинхронну генерацію...');
            
            generateRandomNumbersAsync(totalNumbers, currentDelay)
                .then(numbers => {
                    logToConsole(`Асинхронна функція повернула ${numbers.length} чисел`);
                    logToConsole(`Мінімальне: ${Math.min(...numbers)}`);
                    logToConsole(`Максимальне: ${Math.max(...numbers)}`);
                    logToConsole(`Середнє: ${(numbers.reduce((a, b) => a + b, 0) / numbers.length).toFixed(2)}`);
                })
                .catch(error => {
                    logToConsole(`Помилка: ${error.message}`);
                })
                .finally(() => {
                    isGenerating = false;
                    startBtn.disabled = false;
                    stopBtn.disabled = true;
                    logToConsole('Генерація завершена або зупинена');
                });
        }
        
        function stopGeneration() {
            if (!isGenerating) return;
            
            stopGenerationFlag = true;
            logToConsole('Запит на зупинку генерації...');
        }
        
        function clearNumbers() {
            generatedNumbers = [];
            document.getElementById('numbersGrid').innerHTML = '';
            updateStats();
            logToConsole('Всі числа очищено');
        }
        
        delaySlider.addEventListener('input', function() {
            currentDelay = parseInt(this.value);
            delayValue.textContent = currentDelay;
            logToConsole(`Затримку змінено на ${currentDelay} мс`);
        });
        
        countSlider.addEventListener('input', function() {
            totalNumbers = parseInt(this.value);
            countValue.textContent = totalNumbers;
            logToConsole(`Кількість чисел змінено на ${totalNumbers}`);
            updateStats();
        });
        
        window.onload = function() {
            logToConsole('Сторінка завантажена. Готовий до генерації чисел!');
            updateStats();
        };
    </script>
</body>
</html>
