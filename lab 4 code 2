<body>
    <div class="container">
        <h1>üîÑ –†–µ–∫—É—Ä—Å–∏–≤–Ω–µ –æ–±—á–∏—Å–ª–µ–Ω–Ω—è –¥–æ–±—É—Ç–∫—É –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ –º–∞—Å–∏–≤—É</h1>
        
        <div class="input-section">
            <h2>–í–≤–µ–¥—ñ—Ç—å –µ–ª–µ–º–µ–Ω—Ç–∏ –º–∞—Å–∏–≤—É</h2>
            <label for="arrayInput">–í–≤–µ–¥—ñ—Ç—å —á–∏—Å–ª–∞ —á–µ—Ä–µ–∑ –∫–æ–º—É, –ø—Ä–æ–±—ñ–ª –∞–±–æ –Ω–æ–≤–∏–π —Ä—è–¥–æ–∫:</label>
            <textarea id="arrayInput" placeholder="–ù–∞–ø—Ä–∏–∫–ª–∞–¥: 2, 3, 5, 7, 11
–ê–±–æ: 1 2 3 4 5
–ê–±–æ –ø—Ä–æ—Å—Ç–æ: 10 20 30">2, 3, 5, 7, 11</textarea>
            
            <div class="button-group">
                <button class="calculate-btn" onclick="calculateProduct()">
                    <span>üìä</span> –û–±—á–∏—Å–ª–∏—Ç–∏ –¥–æ–±—É—Ç–æ–∫
                </button>
                <button class="random-btn" onclick="generateRandomArray()">
                    <span>üé≤</span> –í–∏–ø–∞–¥–∫–æ–≤–∏–π –º–∞—Å–∏–≤
                </button>
                <button class="reset-btn" onclick="resetAll()">
                    <span>üóëÔ∏è</span> –°–∫–∏–Ω—É—Ç–∏
                </button>
            </div>
        </div>
        
        <div id="resultSection" class="result-section"></div>
    </div>

    <script>
        let recursionSteps = [];
        
        function recursiveProduct(arr, index = 0, depth = 0) {
            if (arr.length === 0) {
                recursionSteps.push({
                    depth: depth,
                    type: 'base-case',
                    message: `–ë–∞–∑–æ–≤–∏–π –≤–∏–ø–∞–¥–æ–∫: –ø–æ—Ä–æ–∂–Ω—ñ–π –º–∞—Å–∏–≤, –ø–æ–≤–µ—Ä—Ç–∞—î–º–æ 1`,
                    result: 1
                });
                return 1;
            }
            
            if (index === arr.length - 1) {
                recursionSteps.push({
                    depth: depth,
                    type: 'base-case',
                    message: `–ë–∞–∑–æ–≤–∏–π –≤–∏–ø–∞–¥–æ–∫: arr[${index}] = ${arr[index]}, –ø–æ–≤–µ—Ä—Ç–∞—î–º–æ ${arr[index]}`,
                    result: arr[index]
                });
                return arr[index];
            }
            
            const currentElement = arr[index];
            recursionSteps.push({
                depth: depth,
                type: 'recursive-case',
                message: `–†–µ–∫—É—Ä—Å–∏–≤–Ω–∏–π –≤–∏–∫–ª–∏–∫: arr[${index}] = ${currentElement} √ó product(arr, ${index + 1})`
            });
            
            const restProduct = recursiveProduct(arr, index + 1, depth + 1);
            const product = currentElement * restProduct;
            
            recursionSteps.push({
                depth: depth,
                type: 'result',
                message: `–ü–æ–≤–µ—Ä–Ω–µ–Ω–Ω—è: ${currentElement} √ó ${restProduct} = ${product}`,
                result: product
            });
            
            return product;
        }
        
        function recursiveProductSlice(arr) {
            if (arr.length === 0) {
                recursionSteps.push({
                    depth: 0,
                    type: 'base-case',
                    message: `–ë–∞–∑–æ–≤–∏–π –≤–∏–ø–∞–¥–æ–∫ (slice): –ø–æ—Ä–æ–∂–Ω—ñ–π –º–∞—Å–∏–≤, –ø–æ–≤–µ—Ä—Ç–∞—î–º–æ 1`,
                    result: 1
                });
                return 1;
            }
            
            if (arr.length === 1) {
                recursionSteps.push({
                    depth: 0,
                    type: 'base-case',
                    message: `–ë–∞–∑–æ–≤–∏–π –≤–∏–ø–∞–¥–æ–∫ (slice): [${arr[0]}], –ø–æ–≤–µ—Ä—Ç–∞—î–º–æ ${arr[0]}`,
                    result: arr[0]
                });
                return arr[0];
            }
            
            const first = arr[0];
            const rest = arr.slice(1);
            
            recursionSteps.push({
                depth: arr.length,
                type: 'recursive-case',
                message: `–†–µ–∫—É—Ä—Å–∏–≤–Ω–∏–π –≤–∏–∫–ª–∏–∫ (slice): ${first} √ó product([${rest}])`
            });
            
            const restProduct = recursiveProductSlice(rest);
            const product = first * restProduct;
            
            recursionSteps.push({
                depth: arr.length,
                type: 'result',
                message: `–ü–æ–≤–µ—Ä–Ω–µ–Ω–Ω—è (slice): ${first} √ó ${restProduct} = ${product}`,
                result: product
            });
            
            return product;
        }
        
        function parseArrayInput(input) {
            const cleaned = input.replace(/\s+/g, ' ').trim();
            
            let numbers;
            if (cleaned.includes(',')) {
                numbers = cleaned.split(',').map(num => num.trim());
            } else {
                numbers = cleaned.split(' ');
            }
            
            const parsed = numbers
                .map(num => parseFloat(num))
                .filter(num => !isNaN(num));
            
            return parsed;
        }
        
        function displayResults(arr, product, method) {
            const resultSection = document.getElementById('resultSection');
            
            recursionSteps = [];
            
            let finalProduct;
            if (method === 'index') {
                finalProduct = recursiveProduct(arr);
            } else {
                finalProduct = recursiveProductSlice(arr);
            }
            
            let resultHTML = `
                <h2>üìà –†–µ–∑—É–ª—å—Ç–∞—Ç–∏ –æ–±—á–∏—Å–ª–µ–Ω–Ω—è</h2>
                
                <div class="array-display">
                    –ú–∞—Å–∏–≤: [${arr.join(', ')}]
                </div>
                
                <div class="product">
                    –î–æ–±—É—Ç–æ–∫ –µ–ª–µ–º–µ–Ω—Ç—ñ–≤: ${finalProduct.toLocaleString()}
                </div>
                
                <div class="info-box">
                    <strong>–ú–µ—Ç–æ–¥:</strong> ${method === 'index' ? '–†–µ–∫—É—Ä—Å—ñ—è –∑ —ñ–Ω–¥–µ–∫—Å–æ–º' : '–†–µ–∫—É—Ä—Å—ñ—è –∑ slice()'}<br>
                    <strong>–ö—ñ–ª—å–∫—ñ—Å—Ç—å –µ–ª–µ–º–µ–Ω—Ç—ñ–≤:</strong> ${arr.length}<br>
                    <strong>–ö—ñ–ª—å–∫—ñ—Å—Ç—å —Ä–µ–∫—É—Ä—Å–∏–≤–Ω–∏—Ö –≤–∏–∫–ª–∏–∫—ñ–≤:</strong> ${recursionSteps.filter(s => s.type === 'recursive-case').length}
                </div>
            `;
            
            if (recursionSteps.length > 0) {
                resultHTML += `
                    <h3>üîç –ö—Ä–æ–∫–∏ —Ä–µ–∫—É—Ä—Å—ñ—ó:</h3>
                    <div class="recursion-steps">
                `;
                
                recursionSteps.forEach((step, index) => {
                    const indent = '&nbsp;&nbsp;'.repeat(step.depth * 2);
                    const stepClass = step.type === 'base-case' ? 'base-case' : 
                                     step.type === 'recursive-case' ? 'recursive-case' : 'step';
                    
                    let stepHTML = `
                        <div class="step ${stepClass}">
                            ${indent}<strong>–ö—Ä–æ–∫ ${index + 1}:</strong> ${step.message}
                    `;
                    
                    if (step.result !== undefined) {
                        stepHTML += `<br>${indent}<em>–†–µ–∑—É–ª—å—Ç–∞—Ç: ${step.result}</em>`;
                    }
                    
                    stepHTML += `</div>`;
                    resultHTML += stepHTML;
                });
                
                resultHTML += `</div>`;
            }
            
            resultHTML += `
                <div class="time-complexity">
                    <strong>–°–∫–ª–∞–¥–Ω—ñ—Å—Ç—å –∞–ª–≥–æ—Ä–∏—Ç–º—É:</strong><br>
                    ‚Ä¢ –ß–∞—Å–æ–≤–∞: O(n) ‚Äì –ª—ñ–Ω—ñ–π–Ω–∞<br>
                    ‚Ä¢ –ü—Ä–æ—Å—Ç–æ—Ä–æ–≤–∞: O(n) ‚Äì —á–µ—Ä–µ–∑ —Å—Ç–µ–∫ —Ä–µ–∫—É—Ä—Å–∏–≤–Ω–∏—Ö –≤–∏–∫–ª–∏–∫—ñ–≤<br>
                    ‚Ä¢ –ë–∞–∑–æ–≤–∏–π –≤–∏–ø–∞–¥–æ–∫: –ø–æ—Ä–æ–∂–Ω—ñ–π –º–∞—Å–∏–≤ –∞–±–æ –æ–¥–∏–Ω –µ–ª–µ–º–µ–Ω—Ç<br>
                    ‚Ä¢ –†–µ–∫—É—Ä—Å–∏–≤–Ω–∏–π –≤–∏–ø–∞–¥–æ–∫: product(n) = arr[0] √ó product(arr[1..n-1])
                </div>
                
                <div class="info-box">
                    <strong>–ú–∞—Ç–µ–º–∞—Ç–∏—á–Ω–∞ —Ñ–æ—Ä–º—É–ª–∞:</strong><br>
                    ‚àè(arr) = ${arr.map((num, i) => `arr[${i}]`).join(' √ó ')}<br>
                    = ${arr.join(' √ó ')}<br>
                    = ${finalProduct.toLocaleString()}
                </div>
            `;
            
            if (finalProduct > Number.MAX_SAFE_INTEGER) {
                resultHTML += `
                    <div class="error">
                        ‚ö†Ô∏è –£–≤–∞–≥–∞: —Ä–µ–∑—É–ª—å—Ç–∞—Ç –ø–µ—Ä–µ–≤–∏—â—É—î –º–∞–∫—Å–∏–º–∞–ª—å–Ω–µ –±–µ–∑–ø–µ—á–Ω–µ —Ü—ñ–ª–µ —á–∏—Å–ª–æ –≤ JavaScript (${Number.MAX_SAFE_INTEGER.toLocaleString()})<br>
                        –ú–æ–∂–µ –±—É—Ç–∏ –≤—Ç—Ä–∞—Ç–∞ —Ç–æ—á–Ω–æ—Å—Ç—ñ!
                    </div>
                `;
            }
            
            resultSection.innerHTML = resultHTML;
            resultSection.className = 'result-section show';
        }
        
        function calculateProduct() {
            const input = document.getElementById('arrayInput').value.trim();
            
            if (!input) {
                alert('–ë—É–¥—å –ª–∞—Å–∫–∞, –≤–≤–µ–¥—ñ—Ç—å –µ–ª–µ–º–µ–Ω—Ç–∏ –º–∞—Å–∏–≤—É!');
                return;
            }
            
            const arr = parseArrayInput(input);
            
            if (arr.length === 0) {
                document.getElementById('resultSection').innerHTML = `
                    <div class="error">
                        –ù–µ –≤–¥–∞–ª–æ—Å—è —Ä–æ–∑–ø—ñ–∑–Ω–∞—Ç–∏ —á–∏—Å–ª–∞ —É –≤–≤–µ–¥–µ–Ω–æ–º—É —Ç–µ–∫—Å—Ç—ñ.<br>
                        –í–≤–µ–¥—ñ—Ç—å —á–∏—Å–ª–∞ —á–µ—Ä–µ–∑ –∫–æ–º—É, –ø—Ä–æ–±—ñ–ª –∞–±–æ –Ω–æ–≤–∏–π —Ä—è–¥–æ–∫.
                    </div>
                `;
                document.getElementById('resultSection').className = 'result-section show';
                return;
            }
            
            const method = confirm('–û–±–µ—Ä—ñ—Ç—å –º–µ—Ç–æ–¥ —Ä–µ–∫—É—Ä—Å—ñ—ó:\n\nOK - –∑ –≤–∏–∫–æ—Ä–∏—Å—Ç–∞–Ω–Ω—è–º —ñ–Ω–¥–µ–∫—Å—É (–∑–±–µ—Ä—ñ–≥–∞—î –æ—Ä–∏–≥—ñ–Ω–∞–ª—å–Ω–∏–π –º–∞—Å–∏–≤)\nCancel - –∑ –≤–∏–∫–æ—Ä–∏—Å—Ç–∞–Ω–Ω—è–º slice() (—Å—Ç–≤–æ—Ä—é—î –Ω–æ–≤—ñ –º–∞—Å–∏–≤–∏)') 
                ? 'index' : 'slice';
            
            displayResults(arr, 0, method);
        }
        
        function generateRandomArray() {
            const length = Math.floor(Math.random() * 8) + 3; // 3-10 –µ–ª–µ–º–µ–Ω—Ç—ñ–≤
            const arr = [];
            
            for (let i = 0; i < length; i++) {
                arr.push(Math.floor(Math.random() * 20) + 1);
            }
            
            document.getElementById('arrayInput').value = arr.join(', ');
            
            setTimeout(() => calculateProduct(), 100);
        }
        
        function resetAll() {
            document.getElementById('arrayInput').value = '';
            document.getElementById('resultSection').className = 'result-section';
            recursionSteps = [];
        }
        
        document.getElementById('arrayInput').addEventListener('keydown', function(event) {
            if (event.ctrlKey && event.key === 'Enter') {
                calculateProduct();
            }
        });
        
        window.onload = function() {
            setTimeout(() => calculateProduct(), 500);
        };
    </script>
</body>
</html>
