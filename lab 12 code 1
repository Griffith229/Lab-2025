    <script>
        let setA = new Set();
        let setB = new Set();
        let setC = new Set();
        
        function generateSetA() {
            setA.clear();
            let count = 0;
            let number = 2;
            
            while (count < 100) {
                if (number % 2 === 0) {
                    setA.add(number);
                    count++;
                }
                number++;
            }
            return setA;
        }
        
        function generateSetB() {
            setB.clear();
            let count = 0;
            let number = 3;
            
            while (count < 100) {
                if (number % 3 === 0) {
                    setB.add(number);
                    count++;
                }
                number++;
            }
            return setB;
        }
        
        function generateSetC() {
            setC.clear();
            const maxNumber = 1200;
            
            for (let number = 12; number <= maxNumber; number += 12) {
                setC.add(number);
            }
            
            return setC;
        }
        
        function displaySet(set, elementId, className) {
            const container = document.getElementById(elementId);
            const setArray = Array.from(set);
            
            if (setArray.length === 0) {
                container.innerHTML = '<div style="color: #6c757d; font-style: italic;">–ú–Ω–æ–∂–∏–Ω–∞ –ø–æ—Ä–æ–∂–Ω—è</div>';
                return;
            }
            
            let html = '';
            setArray.forEach((number, index) => {
                if (index < 50) {
                    html += `<span class="set-element ${className}">${number}</span>`;
                    if ((index + 1) % 10 === 0) html += '<br>';
                }
            });
            
            if (setArray.length > 50) {
                html += `<div style="margin-top: 10px; color: #6c757d; font-style: italic;">
                    ... —ñ —â–µ ${setArray.length - 50} —á–∏—Å–µ–ª
                </div>`;
            }
            
            container.innerHTML = html;
        }
        
        function getIntersection(set1, set2) {
            const intersection = new Set();
            set1.forEach(value => {
                if (set2.has(value)) {
                    intersection.add(value);
                }
            });
            return intersection;
        }
        
        function generateAndCalculate() {
            generateSetA();
            generateSetB();
            generateSetC();
            
            displaySet(setA, 'setA', 'set-a');
            displaySet(setB, 'setB', 'set-b');
            displaySet(setC, 'setC', 'set-c');
            
            document.getElementById('sizeA').textContent = setA.size;
            document.getElementById('sizeB').textContent = setB.size;
            document.getElementById('sizeC').textContent = setC.size;
            
            const intersection = getIntersection(setA, setB);
            document.getElementById('sizeIntersection').textContent = intersection.size;
            
            const propertiesContainer = document.getElementById('mathProperties');
            let propertiesHtml = '';
            
            propertiesHtml += `<p>–ú–Ω–æ–∂–∏–Ω–∞ C –º—ñ—Å—Ç–∏—Ç—å —á–∏—Å–ª–∞, —â–æ –¥—ñ–ª—è—Ç—å—Å—è –Ω–∞ 12 = –ù–û–ö(2,3,4)</p>`;
            propertiesHtml += `<p>–ö–æ–∂–µ–Ω –µ–ª–µ–º–µ–Ω—Ç –º–Ω–æ–∂–∏–Ω–∏ C —Ç–∞–∫–æ–∂ —î –µ–ª–µ–º–µ–Ω—Ç–æ–º –º–Ω–æ–∂–∏–Ω A —ñ B</p>`;
            propertiesHtml += `<p>C ‚äÜ A ‚à© B ‚äÜ A, B</p>`;
            
            const maxA = Math.max(...setA);
            const maxB = Math.max(...setB);
            const maxC = Math.max(...setC);
            
            propertiesHtml += `
                <div style="margin-top: 15px;">
                    <p><strong>–ú–∞–∫—Å–∏–º–∞–ª—å–Ω—ñ –µ–ª–µ–º–µ–Ω—Ç–∏:</strong></p>
                    <p>max(A) = <span class="highlight">${maxA}</span> (200-—Ç–µ —á–∏—Å–ª–æ, —â–æ –¥—ñ–ª–∏—Ç—å—Å—è –Ω–∞ 2)</p>
                    <p>max(B) = <span class="highlight">${maxB}</span> (200-—Ç–µ —á–∏—Å–ª–æ, —â–æ –¥—ñ–ª–∏—Ç—å—Å—è –Ω–∞ 3)</p>
                    <p>max(C) = <span class="highlight">${maxC}</span></p>
                </div>
            `;
            
            propertiesContainer.innerHTML = propertiesHtml;
            
            const analysisContainer = document.getElementById('analysisResults');
            let analysisHtml = '';
            
            const firstTenA = Array.from(setA).slice(0, 10);
            const firstTenB = Array.from(setB).slice(0, 10);
            const firstTenC = Array.from(setC).slice(0, 10);
            
            analysisHtml += `
                <div style="display: flex; flex-wrap: wrap; gap: 20px; margin-bottom: 20px;">
                    <div style="flex: 1; min-width: 200px;">
                        <p><strong>–ü–µ—Ä—à—ñ 10 –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ –º–Ω–æ–∂–∏–Ω–∏ A:</strong></p>
                        <p>${firstTenA.join(', ')}</p>
                    </div>
                    <div style="flex: 1; min-width: 200px;">
                        <p><strong>–ü–µ—Ä—à—ñ 10 –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ –º–Ω–æ–∂–∏–Ω–∏ B:</strong></p>
                        <p>${firstTenB.join(', ')}</p>
                    </div>
                    <div style="flex: 1; min-width: 200px;">
                        <p><strong>–ü–µ—Ä—à—ñ 10 –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ –º–Ω–æ–∂–∏–Ω–∏ C:</strong></p>
                        <p>${firstTenC.join(', ')}</p>
                    </div>
                </div>
            `;
            
            const commonWithC = new Set();
            setC.forEach(value => {
                if (setA.has(value) && setB.has(value)) {
                    commonWithC.add(value);
                }
            });
            
            analysisHtml += `
                <p>–í—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –º–Ω–æ–∂–∏–Ω–∏ C –¥—ñ–ª—è—Ç—å—Å—è –Ω–∞ 2, 3 —Ç–∞ 12 –æ–¥–Ω–æ—á–∞—Å–Ω–æ.</p>
                <p>–ú–Ω–æ–∂–∏–Ω–∞ C —î –ø—ñ–¥–º–Ω–æ–∂–∏–Ω–æ—é –ø–µ—Ä–µ—Ç–∏–Ω—É A‚à©B: <span class="highlight">C ‚äÜ (A ‚à© B)</span></p>
                <p>–ö—ñ–ª—å–∫—ñ—Å—Ç—å —Å–ø—ñ–ª—å–Ω–∏—Ö –µ–ª–µ–º–µ–Ω—Ç—ñ–≤ C –∑ A‚à©B: <span class="highlight">${commonWithC.size}</span></p>
            `;
            
            const firstCommon = Array.from(commonWithC).slice(0, 5);
            analysisHtml += `<p>–ü–µ—Ä—à—ñ —Å–ø—ñ–ª—å–Ω—ñ –µ–ª–µ–º–µ–Ω—Ç–∏: <span class="highlight">${firstCommon.join(', ')}</span></p>`;
            
            analysisContainer.innerHTML = analysisHtml;
            
            document.getElementById('resultSection').style.display = 'block';
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function showIntersection() {
            if (setA.size === 0 || setB.size === 0) {
                alert('–°–ø–æ—á–∞—Ç–∫—É —Å—Ç–≤–æ—Ä—ñ—Ç—å –º–Ω–æ–∂–∏–Ω–∏!');
                return;
            }
            
            const intersection = getIntersection(setA, setB);
            displaySet(intersection, 'intersectionDisplay', 'set-a');
            
            document.getElementById('intersectionSection').style.display = 'block';
            document.getElementById('intersectionSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function resetAll() {
            setA.clear();
            setB.clear();
            setC.clear();
            
            document.getElementById('setA').innerHTML = '–ú–Ω–æ–∂–∏–Ω–∞ —â–µ –Ω–µ —Å—Ç–≤–æ—Ä–µ–Ω–∞';
            document.getElementById('setB').innerHTML = '–ú–Ω–æ–∂–∏–Ω–∞ —â–µ –Ω–µ —Å—Ç–≤–æ—Ä–µ–Ω–∞';
            document.getElementById('setC').innerHTML = '–ú–Ω–æ–∂–∏–Ω–∞ —â–µ –Ω–µ —Å—Ç–≤–æ—Ä–µ–Ω–∞';
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('intersectionSection').style.display = 'none';
            
            alert('–í—Å—ñ –º–Ω–æ–∂–∏–Ω–∏ —Å–∫–∏–Ω—É—Ç–æ!');
        }
        
        window.onload = function() {
            generateAndCalculate();
        };
    </script>
</body>
