    <script>
        class Ball {
            constructor(name, type, color, diameter, material, weight, pressure) {
                this.name = name;
                this.type = type; 
                this.color = color;
                this.diameter = diameter; 
                this.material = material; 
                this.weight = weight; 
                this.pressure = pressure; 
                
                this._id = this._generateId();
                this._createdAt = new Date();
            }
            
            _generateId() {
                return 'BALL_' + Math.random().toString(36).substr(2, 9).toUpperCase();
            }
            
            getInfo() {
                return `${this.name} (${this.type}), ${this.color}, √ò${this.diameter}—Å–º`;
            }
            
            getFullInfo() {
                return `${this.name}
                –¢–∏–ø: ${this.type}
                –ö–æ–ª—ñ—Ä: ${this.color}
                –î—ñ–∞–º–µ—Ç—Ä: ${this.diameter} —Å–º
                –ú–∞—Ç–µ—Ä—ñ–∞–ª: ${this.material}
                –í–∞–≥–∞: ${this.weight} –≥
                –¢–∏—Å–∫: ${this.pressure} –∞—Ç–º
                ID: ${this._id}`;
            }
            
            getVolume() {
                const radius = this.diameter / 2;
                return ((4/3) * Math.PI * Math.pow(radius, 3)).toFixed(2);
            }
            
            getColorCode() {
                const colorMap = {
                    '—á–µ—Ä–≤–æ–Ω–∏–π': '#ff0000',
                    '—Å–∏–Ω—ñ–π': '#0000ff',
                    '–∑–µ–ª–µ–Ω–∏–π': '#008000',
                    '–∂–æ–≤—Ç–∏–π': '#ffff00',
                    '–ø–æ–º–∞—Ä–∞–Ω—á–µ–≤–∏–π': '#ffa500',
                    '—Ñ—ñ–æ–ª–µ—Ç–æ–≤–∏–π': '#800080',
                    '—á–æ—Ä–Ω–∏–π': '#000000',
                    '–±—ñ–ª–∏–π': '#ffffff',
                    '—Ä–æ–∂–µ–≤–∏–π': '#ffc0cb',
                    '–∫–æ—Ä–∏—á–Ω–µ–≤–∏–π': '#8b4513',
                    '—Å—ñ—Ä–∏–π': '#808080'
                };
                return colorMap[this.color.toLowerCase()] || '#cccccc';
            }
        }
        
        let ballsArray = [];
        
        const ballNames = ['–ú–æ–ª–Ω—ñ—è', '–°—Ç—Ä—ñ–ª–∞', '–¢–∏—Ç–∞–Ω', '–í—ñ–∫—ñ–Ω–≥', '–û–ª—ñ–º–ø', '–°—Ç–∞—Ä', '–ß–µ–º–ø—ñ–æ–Ω', '–ü—Ä–æ—Ñ–µ—Å—ñ–æ–Ω–∞–ª', '–ï–∫—Å–ø—Ä–µ—Å', '–ì—Ä–∞–Ω–¥'];
        const ballTypes = ['—Ñ—É—Ç–±–æ–ª—å–Ω–∏–π', '–±–∞—Å–∫–µ—Ç–±–æ–ª—å–Ω–∏–π', '–≤–æ–ª–µ–π–±–æ–ª—å–Ω–∏–π', '—Ç–µ–Ω—ñ—Å–Ω–∏–π', '–≥–∞–Ω–¥–±–æ–ª—å–Ω–∏–π', '–≤–æ–¥–Ω–∏–π', '—Ä–µ–≥–±—ñ–π–Ω–∏–π'];
        const ballColors = ['—á–µ—Ä–≤–æ–Ω–∏–π', '—Å–∏–Ω—ñ–π', '–∑–µ–ª–µ–Ω–∏–π', '–∂–æ–≤—Ç–∏–π', '–ø–æ–º–∞—Ä–∞–Ω—á–µ–≤–∏–π', '—Ñ—ñ–æ–ª–µ—Ç–æ–≤–∏–π', '—á–æ—Ä–Ω–∏–π', '–±—ñ–ª–∏–π', '—Ä–æ–∂–µ–≤–∏–π', '–∫–æ—Ä–∏—á–Ω–µ–≤–∏–π'];
        const ballMaterials = ['—à–∫—ñ—Ä–∞', '–≥—É–º–∞', '–ø–ª—ñ–≤–∫–∞', '—Å–∏–Ω—Ç–µ—Ç–∏–∫–∞', '–ø–æ–ª—ñ—É—Ä–µ—Ç–∞–Ω', '–ª–∞—Ç–µ–∫—Å'];
        
        function createBallsArray() {
            ballsArray = [];
            
            const diameters = [22, 22, 24.5, 20, 22, 6.7, 24.5]; 
            
            for (let i = 0; i < 7; i++) {
                const name = ballNames[Math.floor(Math.random() * ballNames.length)];
                const type = ballTypes[Math.floor(Math.random() * ballTypes.length)];
                const color = ballColors[Math.floor(Math.random() * ballColors.length)];
                const diameter = diameters[i]; 
                const material = ballMaterials[Math.floor(Math.random() * ballMaterials.length)];
                
                let weight, pressure;
                switch(type) {
                    case '—Ñ—É—Ç–±–æ–ª—å–Ω–∏–π':
                        weight = Math.floor(Math.random() * 100) + 400; 
                        pressure = (Math.random() * 0.3 + 0.8).toFixed(2); 
                        break;
                    case '–±–∞—Å–∫–µ—Ç–±–æ–ª—å–Ω–∏–π':
                        weight = Math.floor(Math.random() * 100) + 550; 
                        pressure = (Math.random() * 0.2 + 0.6).toFixed(2); 
                        break;
                    case '–≤–æ–ª–µ–π–±–æ–ª—å–Ω–∏–π':
                        weight = Math.floor(Math.random() * 50) + 250; 
                        pressure = (Math.random() * 0.1 + 0.3).toFixed(2); 
                        break;
                    case '—Ç–µ–Ω—ñ—Å–Ω–∏–π':
                        weight = Math.floor(Math.random() * 10) + 55; 
                        pressure = (Math.random() * 0.05 + 0.1).toFixed(2); 
                        break;
                    default:
                        weight = Math.floor(Math.random() * 200) + 300; 
                        pressure = (Math.random() * 0.5 + 0.5).toFixed(2); 
                }
                
                const ball = new Ball(name, type, color, diameter, material, weight, pressure);
                ballsArray.push(ball);
            }
            
            displayBalls(ballsArray, 'ballsContainer');
            
            document.getElementById('searchResult').style.display = 'none';
            document.getElementById('diameterResult').style.display = 'none';
            
            alert(`–°—Ç–≤–æ—Ä–µ–Ω–æ –º–∞—Å–∏–≤ –∑ ${ballsArray.length} –º'—è—á—ñ–≤!`);
        }
        
        function displayBalls(balls, containerId) {
            const container = document.getElementById(containerId);
            
            if (balls.length === 0) {
                container.innerHTML = '<div class="no-results">–ú\'—è—á—ñ–≤ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ</div>';
                return;
            }
            
            let html = '<div class="ball-list">';
            
            balls.forEach((ball, index) => {
                const colorCode = ball.getColorCode();
                const volume = ball.getVolume();
                const diameter = ball.diameter;
                const circleSize = Math.min(100, diameter * 4); 
                
                html += `
                    <div class="ball-item">
                        <div class="ball-header">
                            <div class="ball-name">${ball.name}</div>
                            <span class="ball-type">${ball.type}</span>
                        </div>
                        <div class="ball-visual">
                            <div class="ball-circle" style="
                                width: ${circleSize}px;
                                height: ${circleSize}px;
                                background: radial-gradient(circle at 30% 30%, ${colorCode}, ${this.darkenColor(colorCode, 0.3)});
                                font-size: ${circleSize / 6}px;
                            ">
                                √ò${diameter}—Å–º
                            </div>
                        </div>
                        <div class="ball-details">
                            <strong>–ö–æ–ª—ñ—Ä:</strong> 
                            <span class="color-preview" style="background-color: ${colorCode}"></span>
                            ${ball.color}<br>
                            <strong>–î—ñ–∞–º–µ—Ç—Ä:</strong> ${diameter} —Å–º<br>
                            <strong>–ú–∞—Ç–µ—Ä—ñ–∞–ª:</strong> ${ball.material}<br>
                            <strong>–í–∞–≥–∞:</strong> ${ball.weight} –≥<br>
                            <strong>–¢–∏—Å–∫:</strong> ${ball.pressure} –∞—Ç–º<br>
                            <strong>–û–±'—î–º:</strong> ${volume} —Å–º¬≥<br>
                            <strong>ID:</strong> ${ball._id.substr(0, 8)}...
                        </div>
                    </div>
                `;
            });
            
            html += '</div>';
            container.innerHTML = html;
        }
        
        function darkenColor(color, factor) {
            if (color.startsWith('#')) {
                let r = parseInt(color.substr(1, 2), 16);
                let g = parseInt(color.substr(3, 2), 16);
                let b = parseInt(color.substr(5, 2), 16);
                
                r = Math.floor(r * (1 - factor));
                g = Math.floor(g * (1 - factor));
                b = Math.floor(b * (1 - factor));
                
                return `#${r.toString(16).padStart(2, '0')}${g.toString(16).padStart(2, '0')}${b.toString(16).padStart(2, '0')}`;
            }
            return color;
        }
        
        function showSearchBox() {
            if (ballsArray.length === 0) {
                alert('–°–ø–æ—á–∞—Ç–∫—É —Å—Ç–≤–æ—Ä—ñ—Ç—å –º–∞—Å–∏–≤ –º\'—è—á—ñ–≤!');
                return;
            }
            
            document.getElementById('searchBox').style.display = 'block';
            document.getElementById('colorSearch').focus();
            
            document.querySelectorAll('.color-option').forEach(opt => {
                opt.classList.remove('active');
            });
        }
        
        function setColorSearch(color) {
            document.getElementById('colorSearch').value = color;
            
            document.querySelectorAll('.color-option').forEach(opt => {
                opt.classList.remove('active');
            });
            event.target.classList.add('active');
        }
        
        function hideSearchBox() {
            document.getElementById('searchBox').style.display = 'none';
            document.getElementById('colorSearch').value = '';
            
            document.querySelectorAll('.color-option').forEach(opt => {
                opt.classList.remove('active');
            });
        }
        
        function searchByColor() {
            const searchTerm = document.getElementById('colorSearch').value.trim().toLowerCase();
            
            if (!searchTerm) {
                alert('–ë—É–¥—å –ª–∞—Å–∫–∞, –≤–≤–µ–¥—ñ—Ç—å –∫–æ–ª—ñ—Ä –¥–ª—è –ø–æ—à—É–∫—É');
                return;
            }
            
            const foundBalls = ballsArray.filter(ball => 
                ball.color.toLowerCase().includes(searchTerm)
            );
            
            if (foundBalls.length === 0) {
                document.getElementById('searchResultContainer').innerHTML = 
                    `<div class="no-results">
                        <p>–ù–µ –∑–Ω–∞–π–¥–µ–Ω–æ –º'—è—á—ñ–≤ –∑ –∫–æ–ª—å–æ—Ä–æ–º "<span class="highlight">${searchTerm}</span>"</p>
                        <p>–î–æ—Å—Ç—É–ø–Ω—ñ –∫–æ–ª—å–æ—Ä–∏: ${Array.from(new Set(ballsArray.map(b => b.color))).join(', ')}</p>
                    </div>`;
            } else {
                displayBalls(foundBalls, 'searchResultContainer');
            }
            
            document.getElementById('searchResult').style.display = 'block';
            document.getElementById('diameterResult').style.display = 'none';
            
            document.getElementById('searchResult').scrollIntoView({ behavior: 'smooth' });
        }
        
        function findSameDiameterBalls() {
            if (ballsArray.length === 0) {
                alert('–°–ø–æ—á–∞—Ç–∫—É —Å—Ç–≤–æ—Ä—ñ—Ç—å –º–∞—Å–∏–≤ –º\'—è—á—ñ–≤!');
                return;
            }
            
            const diameterCount = {};
            ballsArray.forEach(ball => {
                diameterCount[ball.diameter] = (diameterCount[ball.diameter] || 0) + 1;
            });
            
            const sameDiameters = Object.keys(diameterCount).filter(d => diameterCount[d] > 1);
            
            if (sameDiameters.length === 0) {
                document.getElementById('diameterResultContainer').innerHTML = 
                    `<div class="no-results">
                        <p>–ù–µ–º–∞—î –º'—è—á—ñ–≤ –∑ –æ–¥–Ω–∞–∫–æ–≤–∏–º–∏ –¥—ñ–∞–º–µ—Ç—Ä–∞–º–∏</p>
                        <p>–í—Å—ñ –¥—ñ–∞–º–µ—Ç—Ä–∏ —É–Ω—ñ–∫–∞–ª—å–Ω—ñ</p>
                    </div>`;
            } else {
                let html = '<div class="ball-list">';
                
                sameDiameters.forEach(diameter => {
                    const ballsWithDiameter = ballsArray.filter(ball => ball.diameter == diameter);
                    
                    html += `<h3>–î—ñ–∞–º–µ—Ç—Ä: <span class="highlight">${diameter} —Å–º</span> (${ballsWithDiameter.length} –º'—è—á—ñ–≤)</h3>`;
                    
                    ballsWithDiameter.forEach(ball => {
                        const colorCode = ball.getColorCode();
                        
                        html += `
                            <div class="ball-item">
                                <div class="ball-header">
                                    <div class="ball-name">${ball.name}</div>
                                    <span class="ball-type">${ball.type}</span>
                                </div>
                                <div class="ball-details">
                                    <strong>–ö–æ–ª—ñ—Ä:</strong> 
                                    <span class="color-preview" style="background-color: ${colorCode}"></span>
                                    ${ball.color}<br>
                                    <strong>–î—ñ–∞–º–µ—Ç—Ä:</strong> ${ball.diameter} —Å–º<br>
                                    <strong>–¢–∏–ø:</strong> ${ball.type}<br>
                                    <strong>–û–±'—î–º:</strong> ${ball.getVolume()} —Å–º¬≥
                                </div>
                            </div>
                        `;
                    });
                });
                
                html += '</div>';
                document.getElementById('diameterResultContainer').innerHTML = html;
            }
            
            document.getElementById('diameterResult').style.display = 'block';
            document.getElementById('searchResult').style.display = 'none';
            
            document.getElementById('diameterResult').scrollIntoView({ behavior: 'smooth' });
        }
        
        function resetAll() {
            ballsArray = [];
            document.getElementById('ballsContainer').innerHTML = 
                '–ú–∞—Å–∏–≤ –º\'—è—á—ñ–≤ —â–µ –Ω–µ —Å—Ç–≤–æ—Ä–µ–Ω–æ. –ù–∞—Ç–∏—Å–Ω—ñ—Ç—å "–°—Ç–≤–æ—Ä–∏—Ç–∏ –º–∞—Å–∏–≤ –º\'—è—á—ñ–≤"';
            document.getElementById('searchResult').style.display = 'none';
            document.getElementById('diameterResult').style.display = 'none';
            document.getElementById('searchBox').style.display = 'none';
            document.getElementById('colorSearch').value = '';
            
            document.querySelectorAll('.color-option').forEach(opt => {
                opt.classList.remove('active');
            });
            
            alert('–í—Å—ñ –¥–∞–Ω—ñ —Å–∫–∏–Ω—É—Ç–æ!');
        }
        
        document.getElementById('colorSearch').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchByColor();
            }
        });
        
        window.onload = function() {
            createBallsArray();
        };
    </script>
</body>
</html>
