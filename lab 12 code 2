    <script>
        let computerDictionary = new Map();
        let lastUpdateTime = new Date();
        
        const sampleData = [
            ["processor", "–ø—Ä–æ—Ü–µ—Å–æ—Ä"],
            ["motherboard", "–º–∞—Ç–µ—Ä–∏–Ω—Å—å–∫–∞ –ø–ª–∞—Ç–∞"],
            ["RAM", "–æ–ø–µ—Ä–∞—Ç–∏–≤–Ω–∞ –ø–∞–º'—è—Ç—å"],
            ["hard drive", "–∂–æ—Ä—Å—Ç–∫–∏–π –¥–∏—Å–∫"],
            ["SSD", "—Ç–≤–µ—Ä–¥–æ—Ç—ñ–ª—å–Ω–∏–π –Ω–∞–∫–æ–ø–∏—á—É–≤–∞—á"],
            ["graphics card", "–≤—ñ–¥–µ–æ–∫–∞—Ä—Ç–∞"],
            ["power supply", "–±–ª–æ–∫ –∂–∏–≤–ª–µ–Ω–Ω—è"],
            ["cooling system", "—Å–∏—Å—Ç–µ–º–∞ –æ—Ö–æ–ª–æ–¥–∂–µ–Ω–Ω—è"],
            ["case", "–∫–æ—Ä–ø—É—Å"],
            ["monitor", "–º–æ–Ω—ñ—Ç–æ—Ä"],
            ["keyboard", "–∫–ª–∞–≤—ñ–∞—Ç—É—Ä–∞"],
            ["mouse", "–º–∏—à–∞"],
            ["network card", "–º–µ—Ä–µ–∂–µ–≤–∞ –∫–∞—Ä—Ç–∞"],
            ["sound card", "–∑–≤—É–∫–æ–≤–∞ –∫–∞—Ä—Ç–∞"],
            ["optical drive", "–æ–ø—Ç–∏—á–Ω–∏–π –ø—Ä–∏–≤—ñ–¥"]
        ];
        
        function initializeDictionary() {
            sampleData.forEach(([english, ukrainian]) => {
                computerDictionary.set(english.toLowerCase(), ukrainian);
            });
            updateLastUpdateTime();
        }
        
        function addToDictionary() {
            const englishTerm = document.getElementById('englishTerm').value.trim();
            const ukrainianTerm = document.getElementById('ukrainianTerm').value.trim();
            
            if (!englishTerm || !ukrainianTerm) {
                alert('–ë—É–¥—å –ª–∞—Å–∫–∞, –∑–∞–ø–æ–≤–Ω—ñ—Ç—å –æ–±–∏–¥–≤–∞ –ø–æ–ª—è!');
                return;
            }
            
            const englishLower = englishTerm.toLowerCase();
            
            if (computerDictionary.has(englishLower)) {
                if (confirm(`–¢–µ—Ä–º—ñ–Ω "${englishTerm}" –≤–∂–µ —ñ—Å–Ω—É—î. –ó–∞–º—ñ–Ω–∏—Ç–∏ –∑–Ω–∞—á–µ–Ω–Ω—è?`)) {
                    computerDictionary.set(englishLower, ukrainianTerm);
                    alert(`–¢–µ—Ä–º—ñ–Ω "${englishTerm}" –æ–Ω–æ–≤–ª–µ–Ω–æ!`);
                }
            } else {
                computerDictionary.set(englishLower, ukrainianTerm);
                alert(`–¢–µ—Ä–º—ñ–Ω "${englishTerm}" —É—Å–ø—ñ—à–Ω–æ –¥–æ–¥–∞–Ω–æ –¥–æ —Å–ª–æ–≤–Ω–∏–∫–∞!`);
            }
            
            updateLastUpdateTime();
            clearInputFields();
        }
        
        function addSampleData() {
            sampleData.forEach(([english, ukrainian]) => {
                if (!computerDictionary.has(english.toLowerCase())) {
                    computerDictionary.set(english.toLowerCase(), ukrainian);
                }
            });
            
            updateLastUpdateTime();
            alert('–ü—Ä–∏–∫–ª–∞–¥–∏ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç—ñ–≤ —É—Å–ø—ñ—à–Ω–æ –¥–æ–¥–∞–Ω–æ –¥–æ —Å–ª–æ–≤–Ω–∏–∫–∞!');
        }
        
        function showFullDictionary() {
            if (computerDictionary.size === 0) {
                alert('–°–ª–æ–≤–Ω–∏–∫ –ø–æ—Ä–æ–∂–Ω—ñ–π! –î–æ–¥–∞–π—Ç–µ —Ç–µ—Ä–º—ñ–Ω–∏ —Å–ø–æ—á–∞—Ç–∫—É.');
                return;
            }
            
            const display = document.getElementById('dictionaryDisplay');
            const entries = Array.from(computerDictionary.entries());
            
            let html = '';
            entries.forEach(([english, ukrainian], index) => {
                html += `
                    <div class="dictionary-item">
                        <span class="index">${index + 1}</span>
                        <div class="english-term">${english}</div>
                        <div class="ukrainian-term">‚Üí ${ukrainian}</div>
                    </div>
                `;
            });
            
            display.innerHTML = html;
            
            document.getElementById('totalEntries').textContent = computerDictionary.size;
            document.getElementById('uniqueTerms').textContent = computerDictionary.size;
            document.getElementById('lastUpdate').textContent = formatTime(lastUpdateTime);
            
            document.getElementById('dictionarySection').style.display = 'block';
            document.getElementById('ukrainianSection').style.display = 'none';
            document.getElementById('searchResults').style.display = 'none';
            
            document.getElementById('dictionarySection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function showUkrainianTerms() {
            if (computerDictionary.size === 0) {
                alert('–°–ª–æ–≤–Ω–∏–∫ –ø–æ—Ä–æ–∂–Ω—ñ–π! –î–æ–¥–∞–π—Ç–µ —Ç–µ—Ä–º—ñ–Ω–∏ —Å–ø–æ—á–∞—Ç–∫—É.');
                return;
            }
            
            const display = document.getElementById('ukrainianDisplay');
            const ukrainianTerms = Array.from(computerDictionary.values());
            
            let html = '';
            ukrainianTerms.forEach((term, index) => {
                html += `
                    <div class="ukrainian-item">
                        <span class="index">${index + 1}</span>
                        ${term}
                    </div>
                `;
            });
            
            display.innerHTML = html;
            
            document.getElementById('ukrainianCount').textContent = ukrainianTerms.length;
            
            document.getElementById('ukrainianSection').style.display = 'block';
            document.getElementById('dictionarySection').style.display = 'none';
            document.getElementById('searchResults').style.display = 'none';
            
            document.getElementById('ukrainianSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function searchDictionary() {
            const searchTerm = document.getElementById('searchInput').value.trim().toLowerCase();
            
            if (!searchTerm) {
                alert('–ë—É–¥—å –ª–∞—Å–∫–∞, –≤–≤–µ–¥—ñ—Ç—å —Ç–µ–∫—Å—Ç –¥–ª—è –ø–æ—à—É–∫—É!');
                return;
            }
            
            const results = [];
            computerDictionary.forEach((ukrainian, english) => {
                if (english.includes(searchTerm) || ukrainian.toLowerCase().includes(searchTerm)) {
                    results.push({ english, ukrainian });
                }
            });
            
            const resultsDisplay = document.getElementById('searchResultsDisplay');
            
            if (results.length === 0) {
                resultsDisplay.innerHTML = `
                    <div class="empty-state">
                        <h3>–ù—ñ—á–æ–≥–æ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ</h3>
                        <p>–ó–∞ –≤–∞—à–∏–º –∑–∞–ø–∏—Ç–æ–º "${searchTerm}" –Ω—ñ—á–æ–≥–æ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ.</p>
                    </div>
                `;
            } else {
                let html = `<h3>–ó–Ω–∞–π–¥–µ–Ω–æ ${results.length} —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ñ–≤ –¥–ª—è "${searchTerm}":</h3>`;
                
                results.forEach((item, index) => {
                    html += `
                        <div class="dictionary-item">
                            <span class="index">${index + 1}</span>
                            <div class="english-term">${item.english}</div>
                            <div class="ukrainian-term">‚Üí ${item.ukrainian}</div>
                        </div>
                    `;
                });
                
                resultsDisplay.innerHTML = html;
            }
            
            document.getElementById('searchResults').style.display = 'block';
            document.getElementById('dictionarySection').style.display = 'none';
            document.getElementById('ukrainianSection').style.display = 'none';
            
            document.getElementById('searchResults').scrollIntoView({ behavior: 'smooth' });
        }
        
        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('searchResults').style.display = 'none';
        }
        
        function resetDictionary() {
            if (confirm('–í–∏ –≤–ø–µ–≤–Ω–µ–Ω—ñ, —â–æ —Ö–æ—á–µ—Ç–µ –æ—á–∏—Å—Ç–∏—Ç–∏ –≤–µ—Å—å —Å–ª–æ–≤–Ω–∏–∫? –¶—é –¥—ñ—é –Ω–µ–º–æ–∂–ª–∏–≤–æ —Å–∫–∞—Å—É–≤–∞—Ç–∏.')) {
                computerDictionary.clear();
                updateLastUpdateTime();
                
                document.getElementById('dictionarySection').style.display = 'none';
                document.getElementById('ukrainianSection').style.display = 'none';
                document.getElementById('searchResults').style.display = 'none';
                
                alert('–°–ª–æ–≤–Ω–∏–∫ —É—Å–ø—ñ—à–Ω–æ –æ—á–∏—â–µ–Ω–æ!');
            }
        }
        
        function updateLastUpdateTime() {
            lastUpdateTime = new Date();
        }
        
        function formatTime(date) {
            return date.toLocaleTimeString('uk-UA', { 
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit'
            });
        }
        
        function clearInputFields() {
            document.getElementById('englishTerm').value = '';
            document.getElementById('ukrainianTerm').value = '';
            document.getElementById('englishTerm').focus();
        }
        
        document.getElementById('englishTerm').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.getElementById('ukrainianTerm').focus();
            }
        });
        
        document.getElementById('ukrainianTerm').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                addToDictionary();
            }
        });
        
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchDictionary();
            }
        });
        
        window.onload = function() {
            initializeDictionary();
        };
    </script>
</body>
</html>
