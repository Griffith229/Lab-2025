<body>
    <div class="container">
        <h1>Обробка одновимірного масиву</h1>
        
        <div class="task">
            <h3>Завдання:</h3>
            <ol>
                <li>Вивести на екран індекс та значення елемента з найбільшим балом</li>
                <li>Обчислити середнє арифметичне першої половини масиву</li>
                <li>Обчислити різницю між першими та останніми елементами масиву</li>
            </ol>
        </div>
        
        <div class="array-display" id="arrayDisplay">
            Масив буде згенеровано після натискання кнопки
        </div>
        
        <div class="controls">
            <button class="btn" onclick="processArray()">Обробити масив</button>
            <button class="btn btn-reset" onclick="resetArray()">Згенерувати новий масив</button>
        </div>
        
        <div class="result" id="result1">
            Результат 1: Очікуємо обробки...
        </div>
        
        <div class="result" id="result2">
            Результат 2: Очікуємо обробки...
        </div>
        
        <div class="result" id="result3">
            Результат 3: Очікуємо обробки...
        </div>
    </div>

    <script>
        let scores = [];
        
        function generateRandomArray() {
            scores = [];
            const length = Math.floor(Math.random() * 10) + 10; 
            for (let i = 0; i < length; i++) {
                scores.push(Math.floor(Math.random() * 100) + 1); 
            }
            return scores;
        }
        
        window.onload = function() {
            scores = generateRandomArray();
            displayArray();
        };
        
        function displayArray() {
            const arrayDisplay = document.getElementById('arrayDisplay');
            arrayDisplay.innerHTML = `<strong>Поточний масив балів:</strong><br>`;
            
            scores.forEach((score, index) => {
                arrayDisplay.innerHTML += `[${index}] = ${score}  `;
                if ((index + 1) % 5 === 0) arrayDisplay.innerHTML += '<br>';
            });
            
            arrayDisplay.innerHTML += `<br><strong>Кількість елементів:</strong> ${scores.length}`;
        }
        
        function processArray() {
            if (scores.length === 0) {
                scores = generateRandomArray();
                displayArray();
            }
            
            let maxScore = scores[0];
            let maxIndex = 0;
            
            for (let i = 1; i < scores.length; i++) {
                if (scores[i] > maxScore) {
                    maxScore = scores[i];
                    maxIndex = i;
                }
            }
            
            document.getElementById('result1').innerHTML = `
                <strong>1. Елемент з найбільшим балом:</strong><br>
                Індекс: <span class="highlight">${maxIndex}</span><br>
                Значення: <span class="highlight">${maxScore}</span>
            `;
            
            const halfLength = Math.floor(scores.length / 2);
            let sumFirstHalf = 0;
            
            for (let i = 0; i < halfLength; i++) {
                sumFirstHalf += scores[i];
            }
            
            const averageFirstHalf = (sumFirstHalf / halfLength).toFixed(2);
            
            document.getElementById('result2').innerHTML = `
                <strong>2. Середнє арифметичне першої половини масиву:</strong><br>
                Кількість елементів у першій половині: <span class="highlight">${halfLength}</span><br>
                Сума елементів: <span class="highlight">${sumFirstHalf}</span><br>
                Середнє арифметичне: <span class="highlight">${averageFirstHalf}</span>
            `;
            
            const firstElements = scores.slice(0, 3); 
            const lastElements = scores.slice(-3);  
            
            let sumFirst = 0;
            let sumLast = 0;
            
            firstElements.forEach(score => sumFirst += score);
            lastElements.forEach(score => sumLast += score);
            
            const difference = sumFirst - sumLast;
            
            document.getElementById('result3').innerHTML = `
                <strong>3. Різниця між першими та останніми елементами:</strong><br>
                Перші 3 елементи: <span class="highlight">[${firstElements.join(', ')}]</span> (сума = ${sumFirst})<br>
                Останні 3 елементи: <span class="highlight">[${lastElements.join(', ')}]</span> (сума = ${sumLast})<br>
                Різниця (перші - останні): <span class="highlight">${difference}</span>
            `;
        }
        
        function resetArray() {
            scores = generateRandomArray();
            displayArray();
            
            document.getElementById('result1').innerHTML = 'Результат 1: Очікуємо обробки...';
            document.getElementById('result2').innerHTML = 'Результат 2: Очікуємо обробки...';
            document.getElementById('result3').innerHTML = 'Результат 3: Очікуємо обробки...';
        }
        
        generateRandomArray();
        displayArray();
    </script>
</body>
</html>
