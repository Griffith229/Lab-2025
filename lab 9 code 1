    <script>
        const ukrainianAlphabet = [
            '–ê', '–ë', '–í', '–ì', '“ê', '–î', '–ï', '–Ñ', '–ñ', '–ó', '–ò', '–Ü', '–á', '–ô',
            '–ö', '–õ', '–ú', '–ù', '–û', '–ü', '–†', '–°', '–¢', '–£', '–§', '–•', '–¶', '–ß',
            '–®', '–©', '–¨', '–Æ', '–Ø'
        ];
        
        const ukrainianAlphabetLower = ukrainianAlphabet.map(letter => letter.toLowerCase());
        
        const allUkrainianLetters = [...ukrainianAlphabet, ...ukrainianAlphabetLower];
        
        function encryptText() {
            const inputText = document.getElementById('inputText').value;
            const shift = parseInt(document.getElementById('shiftValue').value);
            
            if (!inputText.trim()) {
                alert('–ë—É–¥—å –ª–∞—Å–∫–∞, –≤–≤–µ–¥—ñ—Ç—å —Ç–µ–∫—Å—Ç –¥–ª—è —à–∏—Ñ—Ä—É–≤–∞–Ω–Ω—è!');
                return;
            }
            
            const result = caesarCipher(inputText, shift, 'encrypt');
            displayResults(inputText, result, shift, 'encrypt');
        }
        
        function decryptText() {
            const inputText = document.getElementById('inputText').value;
            const shift = parseInt(document.getElementById('shiftValue').value);
            
            if (!inputText.trim()) {
                alert('–ë—É–¥—å –ª–∞—Å–∫–∞, –≤–≤–µ–¥—ñ—Ç—å —Ç–µ–∫—Å—Ç –¥–ª—è –¥–µ—à–∏—Ñ—Ä—É–≤–∞–Ω–Ω—è!');
                return;
            }
            
            const result = caesarCipher(inputText, shift, 'decrypt');
            displayResults(inputText, result, shift, 'decrypt');
        }
        
        function caesarCipher(text, shift, mode) {
            const alphabetSize = ukrainianAlphabet.length;
            let result = '';
            
            for (let i = 0; i < text.length; i++) {
                const char = text[i];
                let newChar = char;
                
                const isUpperCase = ukrainianAlphabet.includes(char);
                const isLowerCase = ukrainianAlphabetLower.includes(char);
                
                if (isUpperCase || isLowerCase) {
                    const alphabet = isUpperCase ? ukrainianAlphabet : ukrainianAlphabetLower;
                    const currentIndex = alphabet.indexOf(char);
                    
                    let newIndex;
                    if (mode === 'encrypt') {
                        newIndex = (currentIndex + shift) % alphabetSize;
                    } else {
                        newIndex = (currentIndex - shift + alphabetSize) % alphabetSize;
                    }
                    
                    newChar = alphabet[newIndex];
                }
                
                result += newChar;
            }
            
            return result;
        }
        
        function displayResults(original, result, shift, mode) {
            document.getElementById('resultSection').style.display = 'block';
            
            document.getElementById('originalText').textContent = original;
            document.getElementById('resultText').textContent = result;
            
            document.getElementById('shiftStat').textContent = shift;
            
            const letterCount = countUkrainianLetters(original);
            const charCount = original.length;
            
            document.getElementById('letterCount').textContent = letterCount;
            document.getElementById('charCount').textContent = charCount;
            
            displayAlphabet(shift, mode);
            
            displayCharacterExamples(shift, mode);
            
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function countUkrainianLetters(text) {
            let count = 0;
            for (let i = 0; i < text.length; i++) {
                if (allUkrainianLetters.includes(text[i])) {
                    count++;
                }
            }
            return count;
        }
        
        function displayAlphabet(shift, mode) {
            const container = document.getElementById('alphabetDisplay');
            let html = '';
            
            const demoLetters = ukrainianAlphabet.slice(0, 10);
            
            demoLetters.forEach(letter => {
                const originalIndex = ukrainianAlphabet.indexOf(letter);
                let shiftedIndex;
                
                if (mode === 'encrypt') {
                    shiftedIndex = (originalIndex + shift) % ukrainianAlphabet.length;
                } else {
                    shiftedIndex = (originalIndex - shift + ukrainianAlphabet.length) % ukrainianAlphabet.length;
                }
                
                const shiftedLetter = ukrainianAlphabet[shiftedIndex];
                
                html += `
                    <div class="character-row">
                        <div class="char-box original">${letter}</div>
                        <div class="arrow">‚Üí</div>
                        <div class="char-box shifted">${shiftedLetter}</div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }
        
        function displayCharacterExamples(shift, mode) {
            const container = document.getElementById('characterExamples');
            let html = '';
            
            const examples = ['–ê', '–ü', '–†', '–ò', '–í', '–Ü', '–¢'];
            
            examples.forEach(letter => {
                const originalIndex = ukrainianAlphabet.indexOf(letter);
                let shiftedIndex;
                
                if (mode === 'encrypt') {
                    shiftedIndex = (originalIndex + shift) % ukrainianAlphabet.length;
                } else {
                    shiftedIndex = (originalIndex - shift + ukrainianAlphabet.length) % ukrainianAlphabet.length;
                }
                
                const shiftedLetter = ukrainianAlphabet[shiftedIndex];
                
                html += `
                    <div style="display: inline-block; margin: 5px; text-align: center;">
                        <div style="font-weight: bold;">${letter}</div>
                        <div style="font-size: 12px; color: #6c757d;">‚Üí</div>
                        <div style="font-weight: bold; color: #3498db;">${shiftedLetter}</div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }
        
        function setShift(value) {
            document.getElementById('shiftValue').value = value;
        }
        
        function resetAll() {
            document.getElementById('inputText').value = '';
            document.getElementById('shiftValue').value = 3;
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('alphabetDisplay').innerHTML = '';
            document.getElementById('characterExamples').innerHTML = '';
            
            alert('–í—Å—ñ –¥–∞–Ω—ñ —Å–∫–∏–Ω—É—Ç–æ!');
        }
        
        window.onload = function() {
            displayAlphabet(3, 'encrypt');
            displayCharacterExamples(3, 'encrypt');
            
            document.addEventListener('keydown', function(event) {
                if (event.ctrlKey && event.key === 'e') {
                    event.preventDefault();
                    encryptText();
                }
                if (event.ctrlKey && event.key === 'd') {
                    event.preventDefault();
                    decryptText();
                }
            });
            
            setTimeout(() => {
                console.log('–ì–∞—Ä—è—á—ñ –∫–ª–∞–≤—ñ—à—ñ: Ctrl+E - —à–∏—Ñ—Ä—É–≤–∞–Ω–Ω—è, Ctrl+D - –¥–µ—à–∏—Ñ—Ä—É–≤–∞–Ω–Ω—è');
            }, 1000);
        };
        
        document.getElementById('shiftValue').addEventListener('input', function() {
            const inputText = document.getElementById('inputText').value;
            if (inputText.trim() && document.getElementById('resultSection').style.display !== 'none') {
                const shift = parseInt(this.value);
                const result = caesarCipher(inputText, shift, 'encrypt');
                displayResults(inputText, result, shift, 'encrypt');
            }
        });
    </script>
</body>
</html>
