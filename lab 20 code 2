        <div class="comparison">
            <h2>Порівняння результатів</h2>
            <div class="comparison-item">
                <strong>Версія .then():</strong> <span id="thenResult">Не виконано</span>
            </div>
            <div class="comparison-item">
                <strong>Версія async/await:</strong> <span id="awaitResult">Не виконано</span>
            </div>
            <div class="comparison-item">
                <strong>Різниця у часі:</strong> <span id="timeDiff">-</span>
            </div>
        </div>
        
        <div class="console">
            <div class="console-title">Консоль логів:</div>
            <div id="consoleOutput"></div>
        </div>
        
        <div class="code-example">
            // Версія з .then()
            function generateNumbersThen() {
                return new Promise((resolve) => {
                    setTimeout(() => {
                        const number = generateRandomNumber();
                        resolve(number);
                    }, delay);
                });
            }
            
            // Версія з async/await
            async function generateNumbersAwait() {
                await sleep(delay);
                return generateRandomNumber();
            }
        </div>
    </div>

    <script>
        const TOTAL_NUMBERS = 100;
        const DELAY = 500;
        
        let thenGenerating = false;
        let awaitGenerating = false;
        let thenStopFlag = false;
        let awaitStopFlag = false;
        let thenNumbers = [];
        let awaitNumbers = [];
        let consoleOutput = '';
        let thenStartTime = 0;
        let awaitStartTime = 0;
        
        function logToConsole(message) {
            const timestamp = new Date().toLocaleTimeString();
            const logEntry = `[${timestamp}] ${message}\n`;
            consoleOutput += logEntry;
            document.getElementById('consoleOutput').textContent = consoleOutput;
            document.getElementById('consoleOutput').scrollTop = document.getElementById('consoleOutput').scrollHeight;
            console.log(message);
        }
        
        function generateRandomNumber() {
            return Math.floor(Math.random() * 1000) + 1;
        }
        
        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }
        
        function addNumberToGrid(number, version, isEven) {
            const containerId = version === 'then' ? 'numbersThen' : 'numbersAwait';
            const container = document.getElementById(containerId);
            const numberElement = document.createElement('div');
            numberElement.className = `number-item ${isEven ? 'even' : 'odd'}`;
            numberElement.textContent = number;
            container.appendChild(numberElement);
        }
        
        function updateProgress(version, count) {
            const progress = (count / TOTAL_NUMBERS) * 100;
            const progressBar = document.getElementById(`progress${version.charAt(0).toUpperCase() + version.slice(1)}`);
            progressBar.style.width = `${progress}%`;
            
            const countElement = document.getElementById(`${version}Count`);
            countElement.textContent = count;
            
            const timeElement = document.getElementById(`${version}Time`);
            const elapsedTime = version === 'then' 
                ? (Date.now() - thenStartTime) / 1000 
                : (Date.now() - awaitStartTime) / 1000;
            timeElement.textContent = elapsedTime.toFixed(2);
            
            document.getElementById('status').textContent = version === 'then' ? 'Виконується .then()' : 'Виконується await';
        }
        
        // ВЕРСІЯ 1: З використанням .then()
        function generateNumbersWithThen() {
            return new Promise((resolve) => {
                thenNumbers = [];
                document.getElementById('numbersThen').innerHTML = '';
                thenStartTime = Date.now();
                
                logToConsole('=== Початок генерації з .then() ===');
                
                function generateNextNumber(index) {
                    if (index >= TOTAL_NUMBERS || thenStopFlag) {
                        const timeTaken = (Date.now() - thenStartTime) / 1000;
                        logToConsole(`Генерація з .then() завершена за ${timeTaken.toFixed(2)} сек`);
                        resolve({ numbers: thenNumbers, time: timeTaken });
                        return;
                    }
                    
                    new Promise((resolveDelay) => {
                        setTimeout(() => {
                            resolveDelay();
                        }, DELAY);
                    })
                    .then(() => {
                        if (thenStopFlag) return;
                        
                        const number = generateRandomNumber();
                        thenNumbers.push(number);
                        
                        addNumberToGrid(number, 'then', number % 2 === 0);
                        updateProgress('then', index + 1);
                        
                        logToConsole(`[.then()] Згенеровано число ${index + 1}: ${number}`);
                        
                        generateNextNumber(index + 1);
                    });
                }
                
                generateNextNumber(0);
            });
        }
        
        // ВЕРСІЯ 2: З використанням async/await
        async function generateNumbersWithAwait() {
            awaitNumbers = [];
            document.getElementById('numbersAwait').innerHTML = '';
            awaitStartTime = Date.now();
            
            logToConsole('=== Початок генерації з async/await ===');
            
            try {
                for (let i = 0; i < TOTAL_NUMBERS; i++) {
                    if (awaitStopFlag) {
                        logToConsole('Генерація з await зупинена користувачем');
                        break;
                    }
                    
                    await sleep(DELAY);
                    
                    const number = generateRandomNumber();
                    awaitNumbers.push(number);
                    
                    addNumberToGrid(number, 'await', number % 2 === 0);
                    updateProgress('await', i + 1);
                    
                    logToConsole(`[await] Згенеровано число ${i + 1}: ${number}`);
                }
                
                const timeTaken = (Date.now() - awaitStartTime) / 1000;
                logToConsole(`Генерація з await завершена за ${timeTaken.toFixed(2)} сек`);
                
                return { numbers: awaitNumbers, time: timeTaken };
                
            } catch (error) {
                logToConsole(`Помилка в await версії: ${error.message}`);
                throw error;
            }
        }
        
        // Запуск версії з .then()
        function startThenVersion() {
            if (thenGenerating) return;
            
            thenGenerating = true;
            thenStopFlag = false;
            document.getElementById('stopThenBtn').disabled = false;
            document.querySelector('.then-btn').disabled = true;
            
            logToConsole('Запуск основної функції з .then()...');
            
            generateNumbersWithThen()
                .then(result => {
                    document.getElementById('thenResult').textContent = 
                        `Згенеровано ${result.numbers.length} чисел за ${result.time.toFixed(2)} сек`;
                    document.getElementById('thenResult').style.color = '#4CAF50';
                })
                .catch(error => {
                    logToConsole(`Помилка: ${error.message}`);
                    document.getElementById('thenResult').textContent = 'Помилка виконання';
                    document.getElementById('thenResult').style.color = '#f44336';
                })
                .finally(() => {
                    thenGenerating = false;
                    document.getElementById('stopThenBtn').disabled = true;
                    document.querySelector('.then-btn').disabled = false;
                    document.getElementById('status').textContent = 'Готово';
                    compareResults();
                });
        }
        
        // Запуск версії з async/await
        async function startAwaitVersion() {
            if (awaitGenerating) return;
            
            awaitGenerating = true;
            awaitStopFlag = false;
            document.getElementById('stopAwaitBtn').disabled = false;
            document.querySelector('.await-btn').disabled = true;
            
            logToConsole('Запуск основної функції з async/await...');
            
            try {
                const result = await generateNumbersWithAwait();
                document.getElementById('awaitResult').textContent = 
                    `Згенеровано ${result.numbers.length} чисел за ${result.time.toFixed(2)} сек`;
                document.getElementById('awaitResult').style.color = '#4CAF50';
            } catch (error) {
                logToConsole(`Помилка: ${error.message}`);
                document.getElementById('awaitResult').textContent = 'Помилка виконання';
                document.getElementById('awaitResult').style.color = '#f44336';
            } finally {
                awaitGenerating = false;
                document.getElementById('stopAwaitBtn').disabled = true;
                document.querySelector('.await-btn').disabled = false;
                document.getElementById('status').textContent = 'Готово';
                compareResults();
            }
        }
        
        function stopThenVersion() {
            thenStopFlag = true;
            logToConsole('Зупинка версії з .then()...');
        }
        
        function stopAwaitVersion() {
            awaitStopFlag = true;
            logToConsole('Зупинка версії з async/await...');
        }
        
        function compareResults() {
            if (thenNumbers.length > 0 && awaitNumbers.length > 0) {
                const thenTime = parseFloat(document.getElementById('thenTime').textContent);
                const awaitTime = parseFloat(document.getElementById('awaitTime').textContent);
                const diff = Math.abs(thenTime - awaitTime);
                
                document.getElementById('timeDiff').textContent = `${diff.toFixed(2)} сек`;
                document.getElementById('timeDiff').style.color = diff < 0.1 ? '#4CAF50' : '#ff9800';
                
                const thenSum = thenNumbers.reduce((a, b) => a + b, 0);
                const awaitSum = awaitNumbers.reduce((a, b) => a + b, 0);
                
                logToConsole(`=== ПОРІВНЯННЯ ===`);
                logToConsole(`.then(): ${thenNumbers.length} чисел, середнє: ${(thenSum/thenNumbers.length).toFixed(2)}`);
                logToConsole(`await: ${awaitNumbers.length} чисел, середнє: ${(awaitSum/awaitNumbers.length).toFixed(2)}`);
                logToConsole(`Різниця в часі: ${diff.toFixed(2)} сек`);
            }
        }
        
        window.onload = function() {
            logToConsole('Сторінка завантажена. Дві версії готові до роботи!');
            document.getElementById('totalNumbers').textContent = TOTAL_NUMBERS;
            document.getElementById('currentDelay').textContent = DELAY;
        };
    </script>
</body>
</html>
