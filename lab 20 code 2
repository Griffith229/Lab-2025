                <div class="stats">
                    <div class="stat-item">
                        <div class="stat-value" id="awaitCount">0</div>
                        <div class="stat-label">Згенеровано</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="awaitTime">0</div>
                        <div class="stat-label">Час (сек)</div>
                    </div>
