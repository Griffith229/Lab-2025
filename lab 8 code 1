    <script>
        let array = [];
        const rows = 2;
        const cols = 4;
        const minValue = -8;
        const maxValue = 8;
        
        function getRandomNumber(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }
        
        function generateArray() {
            array = [];
            
            for (let i = 0; i < rows; i++) {
                array[i] = [];
                for (let j = 0; j < cols; j++) {
                    array[i][j] = getRandomNumber(minValue, maxValue);
                }
            }
            
            return array;
        }
        
        function displayArray() {
            const container = document.getElementById('matrixContainer');
            
            let html = '<table class="matrix">';
            
            html += '<tr><td></td>';
            for (let j = 0; j < cols; j++) {
                html += `<td style="background-color:#f8f9fa; color:#6c757d; font-size:16px;">–°—Ç–æ–≤–ø–µ—Ü—å ${j}</td>`;
            }
            html += '</tr>';
            
            for (let i = 0; i < rows; i++) {
                html += `<tr><td style="background-color:#f8f9fa; color:#6c757d; font-size:16px;">–†—è–¥–æ–∫ ${i}</td>`;
                for (let j = 0; j < cols; j++) {
                    const value = array[i][j];
                    let className = '';
                    
                    if (value > 0) {
                        className = 'positive';
                    } else if (value < 0) {
                        className = 'negative';
                    } else {
                        className = 'zero';
                    }
                    
                    html += `<td class="${className}">${value}</td>`;
                }
                html += '</tr>';
            }
            
            html += '</table>';
            container.innerHTML = html;
        }
        
        function processArray() {
            const positiveCounts = new Array(cols).fill(0);
            let totalPositive = 0;
            let totalNegative = 0;
            let totalZero = 0;
            
            for (let j = 0; j < cols; j++) {
                for (let i = 0; i < rows; i++) {
                    const value = array[i][j];
                    
                    if (value > 0) {
                        positiveCounts[j]++;
                        totalPositive++;
                    } else if (value < 0) {
                        totalNegative++;
                    } else {
                        totalZero++;
                    }
                }
            }
            
            let maxCount = 0;
            let maxColumns = []; 
            
            for (let j = 0; j < cols; j++) {
                if (positiveCounts[j] > maxCount) {
                    maxCount = positiveCounts[j];
                    maxColumns = [j];
                } else if (positiveCounts[j] === maxCount && maxCount > 0) {
                    maxColumns.push(j);
                }
            }
            
            displayResults(positiveCounts, maxColumns, maxCount);
            displayStats(totalPositive, totalNegative, totalZero);
            
            return { positiveCounts, maxColumns, maxCount };
        }
        
        function displayStats(positive, negative, zero) {
            document.getElementById('totalPositive').textContent = positive;
            document.getElementById('totalNegative').textContent = negative;
            document.getElementById('totalZero').textContent = zero;
        }
        
        function displayResults(positiveCounts, maxColumns, maxCount) {
            const columnsInfo = document.getElementById('columnsInfo');
            const maxColumnResult = document.getElementById('maxColumnResult');
            
            let columnsHtml = '';
            for (let j = 0; j < cols; j++) {
                const isMaxColumn = maxColumns.includes(j);
                columnsHtml += `
                    <div class="column-card ${isMaxColumn ? 'max-column' : ''}">
                        <div class="column-header">–°—Ç–æ–≤–ø–µ—Ü—å ${j}</div>
                        <div class="column-count">${positiveCounts[j]}</div>
                        <div>–¥–æ–¥–∞—Ç–Ω–∏—Ö —á–∏—Å–µ–ª</div>
                        ${isMaxColumn ? '<div style="margin-top:10px; color:#fff3cd; font-size:12px;">‚òÖ –ù–ê–ô–ö–†–ê–©–ò–ô ‚òÖ</div>' : ''}
                    </div>
                `;
            }
            columnsInfo.innerHTML = columnsHtml;
            
            if (maxCount === 0) {
                maxColumnResult.innerHTML = `
                    <p>–£ –º–∞—Å–∏–≤—ñ –Ω–µ–º–∞—î –¥–æ–¥–∞—Ç–Ω–∏—Ö —á–∏—Å–µ–ª –≤ –∂–æ–¥–Ω–æ–º—É —Å—Ç–æ–≤–ø—Ü—ñ.</p>
                    <p>–í—Å—ñ –∑–Ω–∞—á–µ–Ω–Ω—è –∞–±–æ –≤—ñ–¥'—î–º–Ω—ñ, –∞–±–æ –Ω—É–ª—ñ.</p>
                `;
            } else {
                if (maxColumns.length === 1) {
                    maxColumnResult.innerHTML = `
                        <p>–°—Ç–æ–≤–ø–µ—Ü—å –∑ —ñ–Ω–¥–µ–∫—Å–æ–º <span class="highlight">${maxColumns[0]}</span> –º—ñ—Å—Ç–∏—Ç—å –Ω–∞–π–±—ñ–ª—å—à–µ –¥–æ–¥–∞—Ç–Ω–∏—Ö —á–∏—Å–µ–ª:</p>
                        <p><span class="highlight">${maxCount}</span> –¥–æ–¥–∞—Ç–Ω–∏—Ö —á–∏—Å–µ–ª –∑ ${rows} –º–æ–∂–ª–∏–≤–∏—Ö</p>
                    `;
                } else {
                    maxColumnResult.innerHTML = `
                        <p>–ö—ñ–ª—å–∫–∞ —Å—Ç–æ–≤–ø—Ü—ñ–≤ –º—ñ—Å—Ç—è—Ç—å –æ–¥–Ω–∞–∫–æ–≤—É –º–∞–∫—Å–∏–º–∞–ª—å–Ω—É –∫—ñ–ª—å–∫—ñ—Å—Ç—å –¥–æ–¥–∞—Ç–Ω–∏—Ö —á–∏—Å–µ–ª:</p>
                        <p>–°—Ç–æ–≤–ø—Ü—ñ –∑ —ñ–Ω–¥–µ–∫—Å–∞–º–∏: <span class="highlight">${maxColumns.join(', ')}</span></p>
                        <p>–ö–æ–∂–µ–Ω –º—ñ—Å—Ç–∏—Ç—å <span class="highlight">${maxCount}</span> –¥–æ–¥–∞—Ç–Ω–∏—Ö —á–∏—Å–µ–ª –∑ ${rows} –º–æ–∂–ª–∏–≤–∏—Ö</p>
                    `;
                }
            }
        }
        
        function generateAndProcessArray() {
            generateArray();
            
            displayArray();
            
            processArray();
            
            document.getElementById('arraySection').style.display = 'block';
            document.getElementById('resultSection').style.display = 'block';
            
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function resetArray() {
            array = [];
            document.getElementById('arraySection').style.display = 'none';
            document.getElementById('resultSection').style.display = 'none';
            
            alert('–ú–∞—Å–∏–≤ —Å–∫–∏–Ω—É—Ç–æ. –ù–∞—Ç–∏—Å–Ω—ñ—Ç—å "–ó–≥–µ–Ω–µ—Ä—É–≤–∞—Ç–∏ —Ç–∞ –æ–±—Ä–æ–±–∏—Ç–∏ –º–∞—Å–∏–≤" –¥–ª—è —Å—Ç–≤–æ—Ä–µ–Ω–Ω—è –Ω–æ–≤–æ–≥–æ –º–∞—Å–∏–≤—É.');
        }
        
        window.onload = function() {
        };
        
        document.addEventListener('keydown', function(event) {
            if (event.code === 'Space') {
                generateAndProcessArray();
            }
        });
    </script>
