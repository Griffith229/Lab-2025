    <script>
        const correctAnswers = {
            q1: "2",
            q2: "2",
            q3: "2",
            q4: "2",
            q5: "2",
            q6: "2",
            q7: "1",
            q8: "2",
            q9: "1",
            q10: "1",
            q11: "1",
            q12: "1",
            q13: "1",
            q14: "1",
            q15: "1",
            q16: "1",
            q17: "1",
            q18: "1",
            q19: "1",
            q20: "1"
        };
        
        const questionsText = {
            q1: "Що таке HTML?",
            q2: "Що таке CSS?",
            q3: "Що таке JavaScript?",
            q4: "Що таке алгоритм?",
            q5: "Що таке база даних?",
            q6: "Що таке SQL?",
            q7: "Що таке API?",
            q8: "Що таке Git?",
            q9: "Що таке HTTP?",
            q10: "Що таке ООП?",
            q11: "Що таке DNS?",
            q12: "Що таке VPN?",
            q13: "Що таке RAM?",
            q14: "Що таке CPU?",
            q15: "Що таке GPU?",
            q16: "Що таке SSD?",
            q17: "Що таке URL?",
            q18: "Що таке IP?",
            q19: "Що таке LAN?",
            q20: "Що таке WAN?"
        };
        
        const optionsText = {
            q1: {
                "1": "Мова програмування для серверів",
                "2": "Мова розмітки гіпертексту",
                "3": "Мова стилізації веб-сторінок",
                "4": "База даних для веб-сайтів",
                "5": "Фреймворк для JavaScript"
            },
            q2: {
                "1": "Мова програмування для анімацій",
                "2": "Мова таблиць стилів",
                "3": "База даних для зберігання стилів",
                "4": "Мова для створення структури сайту",
                "5": "Фреймворк для HTML"
            },
            q3: {
                "1": "Це компілювана мова програмування",
                "2": "Це інтерпретована мова програмування",
                "3": "Це мова розмітки",
                "4": "Це мова стилізації",
                "5": "Це системна мова програмування"
            },
            q4: {
                "1": "Математична формула",
                "2": "Скінчена послідовність інструкцій",
                "3": "Комп'ютерна програма",
                "4": "Математична теорема",
                "5": "Фізичний закон"
            },
            q5: {
                "1": "Текстовий файл з даними",
                "2": "Організована колекція даних",
                "3": "Програма для обробки даних",
                "4": "Апаратне забезпечення для зберігання",
                "5": "Мережевий протокол"
            },
            q6: {
                "1": "Мова програмування",
                "2": "Мова запитів до бази даних",
                "3": "Операційна система",
                "4": "Фреймворк для веб-розробки",
                "5": "Браузер"
            },
            q7: {
                "1": "Application Programming Interface",
                "2": "Advanced Program Integration",
                "3": "Automated Process Interface",
                "4": "Application Process Integration",
