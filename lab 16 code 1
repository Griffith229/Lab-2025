            },
            q16: {
                "1": "Solid State Drive",
                "2": "Solid Storage Device",
                "3": "System Storage Drive",
                "4": "Solid System Drive",
                "5": "Storage State Device"
            },
            q17: {
                "1": "Uniform Resource Locator",
                "2": "Universal Resource Locator",
                "3": "Uniform Resource Link",
                "4": "Universal Resource Link",
                "5": "Uniform Reference Locator"
            },
            q18: {
                "1": "Internet Protocol",
                "2": "Internet Provider",
                "3": "International Protocol",
                "4": "Internet Port",
                "5": "Internal Protocol"
            },
            q19: {
                "1": "Local Area Network",
                "2": "Large Area Network",
                "3": "Local Access Network",
                "4": "Large Access Network",
                "5": "Local Area Node"
            },
            q20: {
                "1": "Wide Area Network",
                "2": "Wireless Area Network",
                "3": "Wide Access Network",
                "4": "Wireless Access Network",
                "5": "Wide Area Node"
            }
        };
        
        const form = document.getElementById('testForm');
        const submitBtn = document.getElementById('submitBtn');
        const resetBtn = document.getElementById('resetBtn');
        const resultContainer = document.getElementById('resultContainer');
        const scoreNumber = document.getElementById('scoreNumber');
        const scoreText = document.getElementById('scoreText');
        const progressFill = document.getElementById('progressFill');
        const detailsList = document.getElementById('detailsList');
        
        submitBtn.addEventListener('click', function() {
            let score = 0;
            const totalQuestions = 20;
            const results = [];
            
            detailsList.innerHTML = '';
            
            for (let i = 1; i <= totalQuestions; i++) {
                const questionName = `q${i}`;
                const selectedOption = form.querySelector(`input[name="${questionName}"]:checked`);
                
                if (selectedOption) {
                    const isCorrect = selectedOption.value === correctAnswers[questionName];
                    
                    if (isCorrect) {
                        score++;
                    }
                    
                    results.push({
                        question: questionName,
                        userAnswer: selectedOption.value,
                        correctAnswer: correctAnswers[questionName],
                        isCorrect: isCorrect
                    });
                } else {
                    results.push({
                        question: questionName,
                        userAnswer: null,
                        correctAnswer: correctAnswers[questionName],
                        isCorrect: false
                    });
                }
            }
            
            const percentage = Math.round((score / totalQuestions) * 100);
            
            scoreNumber.textContent = `${score}/${totalQuestions}`;
            
            let resultMessage = "";
            if (percentage >= 90) {
                resultMessage = "Відмінний результат! Ви добре знаєте матеріал.";
            } else if (percentage >= 70) {
                resultMessage = "Добрий результат. Є що покращити.";
            } else if (percentage >= 50) {
                resultMessage = "Задовільний результат. Потрібно повторити матеріал.";
            } else {
                resultMessage = "Потрібно краще вивчити матеріал.";
            }
            
            scoreText.textContent = resultMessage;
            
            progressFill.style.width = `${percentage}%`;
            progressFill.textContent = `${percentage}%`;
            
            results.forEach((result, index) => {
                const li = document.createElement('li');
                li.className = result.isCorrect ? 'correct' : 'incorrect';
                
                const questionNum = index + 1;
                const questionText = questionsText[result.question];
                
                let userAnswerText = "Не відповів";
                if (result.userAnswer !== null && optionsText[result.question]) {
                    userAnswerText = optionsText[result.question][result.userAnswer];
                }
                
                let correctAnswerText = "";
                if (optionsText[result.question] && optionsText[result.question][result.correctAnswer]) {
                    correctAnswerText = optionsText[result.question][result.correctAnswer];
                }
                
                li.innerHTML = `
                    <span class="status-icon">${result.isCorrect ? '✓' : '✗'}</span>
                    <div>
                        <strong>Питання ${questionNum}:</strong> ${questionText}<br>
                        <strong>Ваша відповідь:</strong> ${userAnswerText}<br>
                        ${!result.isCorrect ? `<strong>Правильна відповідь:</strong> ${correctAnswerText}` : ''}
                    </div>
                `;
                
                detailsList.appendChild(li);
            });
            
            resultContainer.style.display = 'block';
            resultContainer.scrollIntoView({ behavior: 'smooth' });
        });
        
        resetBtn.addEventListener('click', function() {
            const allRadioButtons = form.querySelectorAll('input[type="radio"]');
            allRadioButtons.forEach(radio => {
                radio.checked = false;
            });
            
            const allOptions = form.querySelectorAll('.option');
            allOptions.forEach(option => {
                option.style.borderColor = '#e0e0e0';
                option.style.backgroundColor = 'white';
            });
            
            resultContainer.style.display = 'none';
            form.scrollIntoView({ behavior: 'smooth' });
        });
        
        const radioButtons = form.querySelectorAll('input[type="radio"]');
        radioButtons.forEach(radio => {
            radio.addEventListener('change', function() {
                const questionBlock = this.closest('.question-block');
                const options = questionBlock.querySelectorAll('.option');
                
                options.forEach(option => {
                    option.style.borderColor = '#e0e0e0';
                    option.style.backgroundColor = 'white';
                });
                
                const selectedOption = this.closest('.option');
                selectedOption.style.borderColor = '#3498db';
                selectedOption.style.backgroundColor = '#e8f4fc';
            });
        });
    </script>
</body>
</html>
