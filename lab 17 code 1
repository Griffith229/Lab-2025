<body>
    <div class="container">
        <h1>Зміна кольору зображення</h1>
        
        <div class="instructions">
            <p>Оберіть колір з випадаючого списку, щоб змінити колір зображення</p>
        </div>
        
        <div class="form-section">
            <div class="form-group">
                <label for="colorSelect">Оберіть колір:</label>
                <select id="colorSelect" onchange="changeImageColor()">
                    <option value="#f0f0f0">Сірий</option>
                    <option value="#ff0000">Червоний</option>
                    <option value="#00ff00">Зелений</option>
                    <option value="#0000ff">Синій</option>
                    <option value="#ffff00">Жовтий</option>
                    <option value="#ff00ff">Пурпурний</option>
                    <option value="#00ffff">Бірюзовий</option>
                    <option value="#ffa500">Помаранчевий</option>
                    <option value="#800080">Фіолетовий</option>
                    <option value="#008080">Морської хвилі</option>
                    <option value="#a52a2a">Коричневий</option>
                    <option value="#000000">Чорний</option>
                    <option value="#ffffff">Білий</option>
                </select>
            </div>
            
            <button onclick="applyRandomColor()">Випадковий колір</button>
            <button onclick="resetColor()" class="reset">Скинути</button>
            
            <div class="image-container">
                <div id="colorBox">Зображення</div>
            </div>
            
            <div class="current-color">
                <p>Поточний колір: <span id="currentColor" class="color-name">Сірий</span></p>
                <p>HEX код: <code id="hexCode">#f0f0f0</code></p>
            </div>
        </div>
    </div>

    <script>
        const colorNames = {
            '#f0f0f0': 'Сірий',
            '#ff0000': 'Червоний',
            '#00ff00': 'Зелений',
            '#0000ff': 'Синій',
            '#ffff00': 'Жовтий',
            '#ff00ff': 'Пурпурний',
            '#00ffff': 'Бірюзовий',
            '#ffa500': 'Помаранчевий',
            '#800080': 'Фіолетовий',
            '#008080': 'Морської хвилі',
            '#a52a2a': 'Коричневий',
            '#000000': 'Чорний',
            '#ffffff': 'Білий'
        };

        function changeImageColor() {
            const colorSelect = document.getElementById('colorSelect');
            const selectedColor = colorSelect.value;
            const colorBox = document.getElementById('colorBox');
            const currentColorSpan = document.getElementById('currentColor');
            const hexCodeSpan = document.getElementById('hexCode');
            
            const colorName = colorNames[selectedColor] || 'Невідомий колір';
            
            colorBox.style.backgroundColor = selectedColor;
            currentColorSpan.textContent = colorName;
            currentColorSpan.style.backgroundColor = selectedColor;
            hexCodeSpan.textContent = selectedColor;
            
            const textColor = getContrastColor(selectedColor);
            currentColorSpan.style.color = textColor;
            colorBox.style.color = textColor;
        }

        function getContrastColor(hexColor) {
            if (hexColor === '#ffffff') return '#000000';
            if (hexColor === '#000000') return '#ffffff';
            
            const r = parseInt(hexColor.substr(1, 2), 16);
            const g = parseInt(hexColor.substr(3, 2), 16);
            const b = parseInt(hexColor.substr(5, 2), 16);
            
            const luminance = (0.299 * r + 0.587 * g + 0.114 * b) / 255;
            
            return luminance > 0.5 ? '#000000' : '#ffffff';
        }

        function applyRandomColor() {
            const colors = Object.keys(colorNames);
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            
            const colorSelect = document.getElementById('colorSelect');
            colorSelect.value = randomColor;
            
            changeImageColor();
        }

        function resetColor() {
            const colorSelect = document.getElementById('colorSelect');
            colorSelect.value = '#f0f0f0';
            
            changeImageColor();
        }

        window.onload = function() {
            changeImageColor();
        };
    </script>
</body>
