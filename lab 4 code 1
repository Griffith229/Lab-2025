        <div id="result" class="result"></div>
    </div>

    <script>
        function calculateTriangleParameters(a, b, c) {
            if (a + b <= c || a + c <= b || b + c <= a) {
                return {
                    error: "–¢—Ä–∏–∫—É—Ç–Ω–∏–∫–∞ –∑ —Ç–∞–∫–∏–º–∏ —Å—Ç–æ—Ä–æ–Ω–∞–º–∏ –Ω–µ —ñ—Å–Ω—É—î! (—Å—É–º–∞ –¥–≤–æ—Ö —Å—Ç–æ—Ä—ñ–Ω –ø–æ–≤–∏–Ω–Ω–∞ –±—É—Ç–∏ –±—ñ–ª—å—à–æ—é –∑–∞ —Ç—Ä–µ—Ç—é)"
                };
            }
            
            const perimeter = a + b + c;
            
            const s = perimeter / 2;
            
            const area = Math.sqrt(s * (s - a) * (s - b) * (s - c));
            
            let type, typeClass;
            if (Math.abs(a - b) < 0.0001 && Math.abs(b - c) < 0.0001) {
                type = "–†—ñ–≤–Ω–æ—Å—Ç–æ—Ä–æ–Ω–Ω—ñ–π";
                typeClass = "equilateral";
            } else if (Math.abs(a - b) < 0.0001 || Math.abs(a - c) < 0.0001 || Math.abs(b - c) < 0.0001) {
                type = "–†—ñ–≤–Ω–æ–±–µ–¥—Ä–µ–Ω–∏–π";
                typeClass = "isosceles";
            } else {
                type = "–†—ñ–∑–Ω–æ—Å—Ç–æ—Ä–æ–Ω–Ω—ñ–π";
                typeClass = "scalene";
            }
            
            const sides = [a, b, c].sort((x, y) => x - y);
            const isRight = Math.abs(sides[2]*sides[2] - (sides[0]*sides[0] + sides[1]*sides[1])) < 0.0001;
            
            const heightA = (2 * area) / a;
            const heightB = (2 * area) / b;
            const heightC = (2 * area) / c;
            
            return {
                exists: true,
                sides: { a, b, c },
                perimeter: perimeter,
                area: area,
                type: type,
                typeClass: typeClass,
                isRight: isRight,
                heights: { heightA, heightB, heightC },
                semiperimeter: s
            };
        }
        
        function displayResults(result) {
            const resultDiv = document.getElementById('result');
            
            if (result.error) {
                resultDiv.innerHTML = `
                    <div class="error">${result.error}</div>
                    <p><strong>–ü—Ä–∞–≤–∏–ª–æ —ñ—Å–Ω—É–≤–∞–Ω–Ω—è —Ç—Ä–∏–∫—É—Ç–Ω–∏–∫–∞:</strong><br>
                    –ö–æ–∂–Ω–∞ —Å—Ç–æ—Ä–æ–Ω–∞ –ø–æ–≤–∏–Ω–Ω–∞ –±—É—Ç–∏ –º–µ–Ω—à–æ—é –∑–∞ —Å—É–º—É –¥–≤–æ—Ö —ñ–Ω—à–∏—Ö —Å—Ç–æ—Ä—ñ–Ω.</p>
                `;
                resultDiv.className = 'result show';
                return;
            }
            
            let resultHTML = `<h2>üìä –†–µ–∑—É–ª—å—Ç–∞—Ç–∏ –æ–±—á–∏—Å–ª–µ–Ω—å:</h2>`;
            
            let typeInfo = result.type;
            if (result.isRight) {
                typeInfo += " (—Ç–∞ –ø—Ä—è–º–æ–∫—É—Ç–Ω–∏–π)";
            }
            resultHTML += `
                <div class="triangle-type ${result.typeClass}">
                    –¢–∏–ø —Ç—Ä–∏–∫—É—Ç–Ω–∏–∫–∞: ${typeInfo}
                </div>
            `;
            
            resultHTML += `
                <div class="param"><strong>–°—Ç–æ—Ä–æ–Ω–∞ A:</strong> ${result.sides.a.toFixed(2)} —Å–º</div>
                <div class="param"><strong>–°—Ç–æ—Ä–æ–Ω–∞ B:</strong> ${result.sides.b.toFixed(2)} —Å–º</div>
                <div class="param"><strong>–°—Ç–æ—Ä–æ–Ω–∞ C:</strong> ${result.sides.c.toFixed(2)} —Å–º</div>
                <div class="param"><strong>–ü–µ—Ä–∏–º–µ—Ç—Ä:</strong> ${result.perimeter.toFixed(2)} —Å–º</div>
                <div class="param"><strong>–ü—ñ–≤–ø–µ—Ä–∏–º–µ—Ç—Ä:</strong> ${result.semiperimeter.toFixed(2)} —Å–º</div>
                <div class="param"><strong>–ü–ª–æ—â–∞:</strong> ${result.area.toFixed(2)} —Å–º¬≤</div>
            `;
            
            resultHTML += `
                <div class="param"><strong>–í–∏—Å–æ—Ç–∞ –¥–æ —Å—Ç–æ—Ä–æ–Ω–∏ A:</strong> ${result.heights.heightA.toFixed(2)} —Å–º</div>
                <div class="param"><strong>–í–∏—Å–æ—Ç–∞ –¥–æ —Å—Ç–æ—Ä–æ–Ω–∏ B:</strong> ${result.heights.heightB.toFixed(2)} —Å–º</div>
                <div class="param"><strong>–í–∏—Å–æ—Ç–∞ –¥–æ —Å—Ç–æ—Ä–æ–Ω–∏ C:</strong> ${result.heights.heightC.toFixed(2)} —Å–º</div>
            `;
            
            resultHTML += `
                <div class="formula">
                    <strong>–§–æ—Ä–º—É–ª–∞ –ì–µ—Ä–æ–Ω–∞ –¥–ª—è –ø–ª–æ—â—ñ:</strong><br>
                    S = ‚àö[p(p-a)(p-b)(p-c)]<br>
                    –¥–µ p = (a+b+c)/2 = ${result.semiperimeter.toFixed(2)}<br>
                    S = ‚àö[${result.semiperimeter.toFixed(2)} √ó 
                    ${(result.semiperimeter - result.sides.a).toFixed(2)} √ó 
                    ${(result.semiperimeter - result.sides.b).toFixed(2)} √ó 
                    ${(result.semiperimeter - result.sides.c).toFixed(2)}] = 
                    ${result.area.toFixed(2)} —Å–º¬≤
                </div>
            `;
            
            resultDiv.innerHTML = resultHTML;
            resultDiv.className = 'result show';
        }
        
        function calculateTriangle() {
            const a = parseFloat(document.getElementById('sideA').value);
            const b = parseFloat(document.getElementById('sideB').value);
            const c = parseFloat(document.getElementById('sideC').value);
            
            if (isNaN(a) || isNaN(b) || isNaN(c)) {
                alert("–ë—É–¥—å –ª–∞—Å–∫–∞, –≤–≤–µ–¥—ñ—Ç—å –∫–æ—Ä–µ–∫—Ç–Ω—ñ —á–∏—Å–ª–æ–≤—ñ –∑–Ω–∞—á–µ–Ω–Ω—è –¥–ª—è –≤—Å—ñ—Ö —Å—Ç–æ—Ä—ñ–Ω!");
                return;
            }
            
            if (a <= 0 || b <= 0 || c <= 0) {
                alert("–î–æ–≤–∂–∏–Ω–∏ —Å—Ç–æ—Ä—ñ–Ω –ø–æ–≤–∏–Ω–Ω—ñ –±—É—Ç–∏ –¥–æ–¥–∞—Ç–Ω—ñ–º–∏ —á–∏—Å–ª–∞–º–∏!");
                return;
            }
            
            const result = calculateTriangleParameters(a, b, c);
            
            displayResults(result);
        }
        
        function resetForm() {
            document.getElementById('sideA').value = '';
            document.getElementById('sideB').value = '';
            document.getElementById('sideC').value = '';
            document.getElementById('result').className = 'result';
            document.getElementById('sideA').focus();
        }
        
        document.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                calculateTriangle();
            }
        });
        
        window.onload = function() {
            if (!document.getElementById('sideA').value && 
                !document.getElementById('sideB').value && 
                !document.getElementById('sideC').value) {
                document.getElementById('sideA').value = 5;
                document.getElementById('sideB').value = 6;
                document.getElementById('sideC').value = 7;
                calculateTriangle();
            }
        };
    </script>
